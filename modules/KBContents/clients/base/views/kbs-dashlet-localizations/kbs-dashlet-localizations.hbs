{{#if collection.length}}
    <ul class="unstyled listed kbcontents" data-action="pagination-body">
        {{#each collection.models}}
            <li>
                <h4>
                    <a href="#{{buildRoute model=this action="detail"}}">{{fieldValue this "name"}}</a>
                    <span class="pull-right label">{{fieldValue this "language"}}</span>
                </h4>
                <div class="details">
                    {{str "LBL_CREATED" this.module}}
                    <a href="#{{buildRoute module="Employees" id=(fieldValue this "created_by")}}">
                        {{fieldValue this "created_by_name"}}</a>
                    {{relativeTime attributes.date_entered class='date'}}
                </div>
            </li>
        {{/each}}
    </ul>
    {{#notEq collection.next_offset "-1"}}
        <div class="block-footer">
            <a data-action="show-more">{{str "LBL_MORE_OTHER_LANGUAGES" this.module}}</a>
        </div>
    {{/notEq}}
{{else}}
    <div class="block-footer">
        {{#if collection.dataFetched}}
            {{str "LBL_NO_DATA_AVAILABLE" this.module}}
        {{else}}
            {{str "LBL_LOADING" this.module}}
        {{/if}}
    </div>
{{/if}}
