{{#with templateComponent}}
    <div class="row-fluid">
        <input type="radio" value="from_modules" name="selection" class="h-4 w-4" />
        <span class="text-xs absolute ml-1 mt-0.5">{{str "LBL_FROM_MODULES" module}}</span>

        <div class="row-fluid from-modules">
            <div class="row-fluid ml-7 mb-5">
                <select class="select-modules w-50" multiple placeholder="{{str 'LBL_SELECT_MODULES' module}}">
                    <option></option>
                    {{#each modules}}
                        <option data-id="{{@key}}">{{@key}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
    </div>
{{/with}}