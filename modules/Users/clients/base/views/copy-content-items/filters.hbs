{{#with templateComponent}}
    {{partial "from-modules" this this}}

    <div class="row-fluid">
        <input type="radio" value="existing_filters" name="selection" class="h-4 w-4" />
        <span class="text-xs absolute ml-1 mt-0.5">{{str "LBL_EXISTING_FILTERS" module}}</span>

        <div class="row-fluid existing-filters hide">
            <div class="row-fluid mt-2 mb-4 ml-7">
                {{#each meta.fields}}
                    {{#eq name "filters_select"}}
                        {{field ../../../this model=../../../model template=view_template}}
                    {{/eq}}
                {{/each}}
            </div>
        </div>
    </div>
{{/with}}