<div class="mt-15 ml-5">
    <div class="row-fluid text-xs">
        {{str 'LBL_COPY_ITEM' module}}
    </div>
    <div class="row-fluid">
        <select class="mt-1.5 mb-4 ut-pref-choice">
            <option value="user_prefs">{{str 'LBL_USER_PREFENRECES' module}}</option>
            <option value="dashboards">{{str 'LBL_DASHBOARDS_UTILS' module}}</option>
            <option value="filters">{{str 'LBL_FILTERS' module}}</option>
        </select>
    </div>
    <div class="row-fluid ut-section user-prefs-section active">
        {{partial "user-preferences" this this}}
    </div>
    <div class="row-fluid ut-section dashboards-section hide">
        {{partial "dashboards" this this}}
    </div>
    <div class="row-fluid ut-section filters-section hide">
        {{partial "filters" this this}}
    </div>

    <div class="row-fluid mt-5">
        <div class='text-xs'>{{str "LBL_FROM_USERS" module}}</div>
        <select class='ut-users-select fromUser'>
            <option></option>
            {{#each users}}
                <option data-id="{{id}}" {{#eq ../currentUserId id}}selected{{/eq}}>{{full_name}}</option>
            {{/each}}
        </select>
    </div>
</div>
