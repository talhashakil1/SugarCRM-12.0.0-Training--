<div class="mt-15 ml-5">
    <div class="mb-3">
        <span class="text-sm">{{str "LBL_ITEMS_TO_REASSIGN" module}}&colon;</span>
    </div>
    <div>
        <div class="row-fluid span12 mb-8">
            <div class="span3">
                <input type="checkbox" name="datef" class="text-sm mr-2"> {{str 'LBL_DATE_FORMAT' module}}
            </div>
            <div class="span3">
                <select class="w-50" name="datef">
                    <option></option>
                    {{#each locales.dateOptions}}
                        <option value="{{name}}" {{#if selected}}selected{{/if}}>{{label}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="span3">
                <input type="checkbox" name="currency" class="text-sm mr-2"> {{str 'LBL_CURRENCY' module}}
            </div>
            <div class="span3">
                <select class="w-50" name="currency">
                    <option></option>
                    {{#each locales.currencyOptions}}
                        <option value="{{id}}" {{#if selected}}selected{{/if}}>{{label}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="row-fluid span12 mb-8">
            <div class="span3">
                <input type="checkbox" name="timef" class="text-sm mr-2"> {{str 'LBL_TIME_FORMAT' module}}
            </div>
            <div class="span3">
                <select class="w-50" name="timef">
                    <option></option>
                    {{#each locales.timeOptions}}
                        <option value="{{name}}" {{#if selected}}selected{{/if}}>{{label}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="span3">
                <input type="checkbox" name="default_currency_significant_digits" class="text-sm mr-2"> {{str 'LBL_SYSTEM_SIG_DIGITS' module}}
            </div>
            <div class="span3">
                <select class="w-50" name="default_currency_significant_digits">
                    <option></option>
                    {{#each locales.sigDigitsOptions}}
                        <option value="{{name}}" {{#if selected}}selected{{/if}}>{{name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="row-fluid span12 mb-8">
            <div class="span3">
                <input type="checkbox" name="timezone" class="text-sm mr-2"> {{str 'LBL_TIMEZONE' module}}
            </div>
            <div class="span3">
                <select class="w-50" name="timezone">
                    <option></option>
                    {{#each locales.timezoneOptions}}
                        <option value="{{name}}" {{#if selected}}selected{{/if}}>{{label}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="span3">
                <input type="checkbox" name="field_name_placement" class="text-sm mr-2"> {{str 'LBL_FIELD_NAME_PLACEMENT' module}}
            </div>
            <div class="span3">
                <select class="w-50" name="field_name_placement">
                    <option value="field_on_side" {{#eq locales.fieldNamePlacement "field_on_side"}}selected{{/eq}}>{{str 'LBL_BESIDE_FIELD_VALUE' module}}</option>
                    <option value="field_on_top" {{#eq locales.fieldNamePlacement "field_on_top"}}selected{{/eq}}>{{str 'LBL_ABOVE_FIELD_VALUE' module}}</option>
                </select>
            </div>
        </div>
        <div class="row-fluid span12 mb-8">
            <div class="span3">
                <input type="checkbox" name="ut" class="text-sm mr-2"> {{str 'LBL_PROMPT_TIMEZONE' module}}
            </div>
            <div class="span3">
                <select class="w-50" name="ut">
                    <option value="0" {{#eq locales.fieldNamePlacement "0"}}selected{{/eq}}>{{str 'LBL_PROMPT_TIMEZONE_ON' module}}</option>
                    <option value="1" {{#eq locales.fieldNamePlacement "1"}}selected{{/eq}}>{{str 'LBL_PROMPT_TIMEZONE_OFF' module}}</option>
                </select>
            </div>
            <div class="span3">
                <input type="checkbox" name="num_grp_sep" class="text-sm mr-2"> {{str 'LBL_NUMBER_GROUPING_SEP' module}}
            </div>
            <div class="span3 w-50">
                <input type="text" name="num_grp_sep" class="text-sm mr-2" value="{{locales.numGrpSep}}"/>
            </div>
        </div>
        <div class="row-fluid span12 mb-8">
            <div class="span3">
                <input type="checkbox" name="default_locale_name_format" class="text-sm mr-2"> {{str 'LBL_LOCALE_DEFAULT_NAME_FORMAT' module}}
            </div>
            <div class="span3">
                <select class="w-50" name="default_locale_name_format">
                    <option></option>
                    {{#each locales.nameOptions}}
                        <option value="{{name}}" {{#if selected}}selected{{/if}}>{{label}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="span3">
                <input type="checkbox" name="dec_sep" class="text-sm mr-2"> {{str 'LBL_DECIMAL_SEP' module}}
            </div>
            <div class="span3 w-50">
                <input type="text" name="dec_sep" class="text-sm" value="{{locales.decSep}}"/>
            </div>
        </div>
        <div class="row-fluid span12 mb-8">
            <div class="span3">
                <input type="checkbox" name="appearance" class="text-sm mr-2"> {{str 'LBL_APPEARANCE' module}}
            </div>
            <div class="span3">
                <select class="w-50" name="appearance">
                    <option></option>
                    {{#each locales.appearance}}
                        <option value="{{name}}" {{#if selected}}selected{{/if}}>{{label}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="row-fluid mt-5 ml-3">
            <div class='text-xs mb-2.5'>{{str "LBL_FROM_USERS" module}}</div>
            <select class='ut-users-select fromUser w-50'>
                <option></option>
                {{#each users}}
                    <option data-id="{{id}}" {{#eq ../currentUserId id}}selected{{/eq}}>{{full_name}}</option>
                {{/each}}
            </select>
        </div>
        {{#each meta.fields}}
            <div class="row-fluid span12 mb-8">
                <div class="span3">
                    <span class="text-xs absolute ml-1 mt-0.5">{{str title ../module}}</span>
                </div>
                <div class="span3">
                    {{field ../this model=../model template=view_template}}
                </div>
            </div>
        {{/each}}
    </div>
</div>
