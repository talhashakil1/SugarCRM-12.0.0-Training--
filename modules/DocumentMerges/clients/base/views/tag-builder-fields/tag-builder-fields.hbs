<div class="row-fluid">
    <div class="span12">
        <table class="fieldsList table table-hover table-responsive">
            {{#if fieldsMeta.length}}
            <tr>
                <td>
                    <input type="text" class="dm-select dm-spacing" id="searhFields" placeholder="{{str "LBL_SEARCH"}}" /> 
                </td>
                <td>
                    <button class="btn">
                        <i class="sicon sicon-search dm-options-button-settings"></i>
                    </button>
                </td>
            </tr>
            {{/if}}
            {{#each fieldsMeta}}
                <tr>
                    <td class="dm-center-table-text" data-clipboard="enabled" data-clipboard-text="{{tag}}" label="{{translatedLabel}}">
                        {{translatedLabel}} [{{name}}]
                    </td>
                    <td class="dm-options-button" attr-name="{{name}}">
                        <button class="btn field-options">
                            {{#eq type "relate"}}
                                <i class="sicon sicon-link dm-options-button-settings"></i>
                            {{else}}
                                <i class="sicon sicon-settings dm-options-button-settings"></i>
                            {{/eq}}
                        </button>
                    </td>
                </tr>
            {{/each}}
        </table>
    </div>
</div>
