<div class="row-fluid dm-tag-builder-conditionals-row">
    <div class="span11">
        <textarea class="preview dm-select" id="preview" readonly>{{preview}}</textarea>
    </div>
</div>

<div class="row-fluid dm-tag-builder-conditionals-row">
    <div class="span10">
        <textarea class="dm-select" name="condition" block="condition" statement="if"
            placeholder="{{str 'LBL_DOCUMENT_MERGE_CONDITION' module}}">{{condition}}</textarea>
    </div>
</div>
<div class="row-fluid dm-tag-builder-conditionals-row">
    <div class="span10">
        <textarea class="dm-select" name="conditionResult" block="result" statement="if"
            placeholder="{{str 'LBL_DOCUMENT_MERGE_CONDITION_RESULT' module}}">{{conditionResult}}</textarea>
    </div>
</div>
{{#each elses}}
    <div class="dm-divider"></div>
    <div class="row-fluid dm-tag-builder-conditionals-row">
        <div class="span10">
            <textarea class="dm-select" name="elseIfCondition" block="condition"
                statement="elseifs" data-index={{@index}}
                placeholder="{{str 'LBL_DOCUMENT_MERGE_ELSEIF' ../module}}">{{condition}}</textarea>
        </div>
    </div>
    <div class="row-fluid dm-tag-builder-conditionals-row">
        <div class="span10">
            <textarea class="dm-select" name="elseIfConditionResult" block="result"
                statement="elseifs" data-index={{@index}}
                placeholder="{{str 'LBL_DOCUMENT_MERGE_CONDITION_RESULT' ../module}}">{{result}}</textarea>
        </div>
        {{#if @last}}
            <div class="span2">
                <button class="sicon sicon-plus addElse btn btn-default"></button>
            </div>
        {{/if}}
        {{#unless @last}}
            <div class="span2">
                <button elseIndex={{@index}} class="sicon sicon-minus removeElse btn btn-default"></button>
            </div>
        {{/unless}}
    </div>
{{/each}}
<div class="row-fluid dm-tag-builder-conditionals-row">
    <div class="span2 dm-tag-builder-conditionals-key">{{str 'LBL_DOCUMENT_MERGE_ELSE' module}}</div>
    <div class="span8">
        <textarea class="dm-select" name="elseConditionResult" block="result"
            statement="else"
            placeholder="{{str 'LBL_DOCUMENT_MERGE_CONDITION_RESULT' module}}">{{elseConditionResult}}</textarea>
    </div>
</div>
<div class="row-fluid dm-tag-builder-conditionals-row">
    <div class="span12 dm-tag-builder-buttons-container">
        <div class="dm-tag-builder-buttons">
            <button data-clipboard="enabled" data-clipboard-target=".preview"
                class="btn btn-default">{{str 'LBL_DOCUMENT_MERGE_COPY_TO_CLIPBOARD' module}}</button>
        </div>
    </div>
</div>
