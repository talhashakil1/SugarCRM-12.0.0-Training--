<div class="row-fluid dm-action-top">
    <div class="btn-group pull-right" id="actions">
        {{#eq model.status "success"}}
            <button class="btn send-email" rel="tooltip" title="{{str 'LBL_SEND_AS_ATTACHMENT' model._module}}"><i
                    class="sicon sicon-email"></i></button>
            <button class="btn send-link" rel="tooltip" title="{{str 'LBL_SEND_AS_NOTIFICATION' model._module}}"><i
                    class="sicon sicon-link"></i></button>
        {{/eq}}
        <button class="btn remove-merge" rel="tooltip" title="{{str 'LBL_REMOVE_FROM_WIDGET' model._module}}"><i
                class="sicon sicon-close"></i></button>
    </div>
</div>
