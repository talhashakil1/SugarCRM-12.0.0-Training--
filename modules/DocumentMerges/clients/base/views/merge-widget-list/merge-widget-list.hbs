<div class="row-fluid helplet-container">
    <div class="helplet">
        <div data-helplet="content" class="helplet-content">
            {{#if merges}}
                {{#each merges}}
                    <div class="merge-row dm-list-bottom" merge-id="{{id}}">
                        <div class="row-fluid">
                            <div class="span1">
                                {{partial "icon" ../this model=this}}
                            </div>
                            <div class="span7">
                                {{partial "info" ../this model=this}}
                            </div>
                            <div class="span4">
                                {{partial "actions" ../this model=this}}
                            </div>
                        </div>
                        {{partial "loading-bar" ../this model=this}}
                    </div>
                {{/each}}
            {{else}}
                <div>{{str LBL_NO_MERGES}}</div>
            {{/if}}
        </div>
    </div>
</div>
