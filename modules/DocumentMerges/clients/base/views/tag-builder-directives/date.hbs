{{#with templateComponent}}
    <div class="row-fluid dm-spacing">
        <div class="span11">
            <textarea class="preview dm-select" id="preview" readonly>{{preview}}</textarea>
        </div>
    </div>
    <div class="row-fluid dm-spacing">
        <div class="span12">
            <div class="span4">{{str 'LBL_DOCUMENT_MERGE_DATE_FORMAT' module}}</div>
            <div class="span6">
                <select class="select2 dm-tag-attribute dateFormatSelect" name="format"
                    placeholder="{{str 'LBL_DOCUMENT_MERGE_DEFAULT_DATE_FORMAT' module}}">
                    <option selected="true">
                    </option>
                    {{#each dateFormats}}
                        <option>{{this}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
    </div>
    <div class="row-fluid dm-spacing">
        <div class="span4">{{str 'LBL_DOCUMENT_MERGE_CUSTOM_DATE' module}}</div>
        <div class="span8">
            <input type="checkbox" class="customDateOption">
        </div>
    </div>
    <div class="row-fluid customDate dm-spacing">
        <div class="span4"><a href="https://momentjs.com/docs/#/displaying/format/" target="_blank">
                {{str 'LBL_HELP'}}</a></div>
        <div class="span6">
            <input type="text" name="format"
                placeholder="{{str 'LBL_DOCUMENT_MERGE_DEFAULT_DATE_FORMAT' module}}" class="dm-tag-attribute customDateValue" attr-name="format" />
        </div>
    </div>
    <div class="row-fluid dm-spacing">
        <div class="dm-tag-builder-buttons span11">
            <button data-clipboard="enabled" data-clipboard-target="#preview"
                class="btn btn-default">{{str 'LBL_DOCUMENT_MERGE_COPY_TO_CLIPBOARD' module}}</button>
        </div>
    </div>
{{/with}}
