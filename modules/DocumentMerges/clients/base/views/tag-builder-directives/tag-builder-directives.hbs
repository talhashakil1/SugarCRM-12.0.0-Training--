<div class="row-fluid">
    <div class="span11">
        <select class="directivesList dm-select" placeholder="{{str "LBL_SELECT_DIRECTIVE" module}}">
            <option></option>
            {{#each directives}}
                <option value={{value}} {{#if selected}}selected{{/if}}>{{name}}</option>
            {{/each}}
        </select>
    </div>
</div>
<div class="row-fluid">
    <div class="span12 dm-tag-builder-directives-content">
        {{#if currentDirective}}
            {{partial currentDirective ../this}}
        {{/if}}
    </div>
</div>
