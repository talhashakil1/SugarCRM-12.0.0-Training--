{{#with templateComponent}}
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h4 class="preview">{{preview}}</h4>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="span4">{{str 'LBL_DOCUMENT_MERGE_FORMAT_TYPE' module}}</div>
                <div class="span8">
                    <select class="dm-tag-attribute boolFormatSelect" name="format"
                        placeholder="{{str 'LBL_DOCUMENT_MERGE_SELECT_BOOLEAN_TYPE' module}}">
                        <option></option>
                        <option value="boolean">{{str 'LBL_DOCUMENT_MERGE_BOOL_TRUTHY' module}}</option>
                        <option value="symbol">{{str 'LBL_DOCUMENT_MERGE_SYMBOL' module}}</option>
                        <option value="number">{{str 'LBL_DOCUMENT_MERGE_BOOL_NUMBERS' module}}</option>
                        <option value="yes/no">{{str 'LBL_DOCUMENT_MERGE_BOOL_YES_NO' module}}</option>
                        <option value="on/off">{{str 'LBL_DOCUMENT_MERGE_BOOL_ON_OFF' module}}</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="span4">{{str 'LBL_DOCUMENT_MERGE_CUSTOM' module}}</div>
                <div class="span8">
                    <input type="checkbox" class="customOption">
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span10 customOptions">
                <div class="span4">{{str 'LBL_DOCUMENT_MERGE_CUSTOM_STATES' module}}</div>
                <div class="span3">
                    <input class="dm-select customValue" type="text" name="customStateOne"
                        placeholder="{{str 'LBL_DOCUMENT_MERGE_CUSTOM_STATE_TRUE' module}}">
                </div>
                <div class="span3">
                    <input class="dm-select customValue" type="text" name="customStateTwo"
                        placeholder="{{str 'LBL_DOCUMENT_MERGE_CUSTOM_STATE_FALSE' module}}">
                </div>
            </div>
        </div>
    </div>
{{/with}}
