{{#with templateComponent}}
    <div class="row-fluid dm-spacing">
        <div class="span12">
            <textarea class="preview dm-select" readonly>{{preview}}</textarea>
        </div>
    </div>
    <div class="row-fluid dm-spacing">
        <div class="span12">
            <div class="span4">{{str 'LBL_DOCUMENT_MERGE_FORMAT_TYPE' module}}</div>
            <div class="span7">
                <select class="select2 dm-tag-attribute"
                    placeholder="{{str 'LBL_DOCUMENT_MERGE_SELECT_SYMBOL' module}}" name="format">
                    <option></option>
                    <option value="bullet">{{str 'LBL_DOCUMENT_MERGE_SYMBOL_BULLET' module}}</option>
                    <option value="number">{{str 'LBL_DOCUMENT_MERGE_SYMBOL_NUMBER' module}}</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row-fluid dm-spacing">
        <div class="span12">
            <div class="span4">{{str 'LBL_DOCUMENT_MERGE_SORT_DIRECTION' module}}</div>
            <div class="span7">
                <select class="select2 dm-tag-attribute" data-action="sortDirection"
                    placeholder="{{str 'LBL_DOCUMENT_MERGE_SELECT_DIRECTION' module}}" name="sort">
                    <option></option>
                    <option value="{{str 'LBL_DOCUMENT_MERGE_ASCENDING' module}}">
                        {{str 'LBL_DOCUMENT_MERGE_ASCENDING' module}}</option>
                    <option value="{{str 'LBL_DOCUMENT_MERGE_DESCENDING' module}}">
                        {{str 'LBL_DOCUMENT_MERGE_DESCENDING' module}}</option>
                </select>
            </div>
        </div>
    </div>
{{/with}}
