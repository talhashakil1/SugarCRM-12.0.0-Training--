{{#with templateComponent}}
    <div class="row-fluid">
        <div class="span12">
            <textarea class="preview dm-select" readonly>{{preview}}</textarea>
        </div>
    </div>
    <div class="row-fluid dm-spacing">
        <div class="span12">
            <div class="span4">{{str 'LBL_DOCUMENT_MERGE_MAX_RECORDS' module}}</div>
            <div class="span7">
                <input type="text" name="max_num" class="dm-tag-attribute dm-select"
                    placeholder="{{str 'LBL_DOCUMENT_MERGE_MAX_RECORDS' module}}">
            </div>
        </div>
    </div>
    <div class="row-fluid dm-spacing">
        <div class="span12">
            <div class="span4">{{str 'LBL_ALT_SORT'}}</div>
            <div class="span7">
                <select class="select2 dm-tag-attribute sortByRelationshipFields" name="sort"
                    placeholder="{{str 'LBL_DOCUMENT_MERGE_SELECT_FIELD' module}}">
                    <option></option>
                    {{#each collectionFields}}
                        <option value={{name}} label="{{str vname ../collectionModule}}"
                            {{#if selected}}selected{{/if}}>
                            {{str vname ../collectionModule}} [{{name}}]
                        </option>
                    {{/each}}
                </select>
            </div>
        </div>
    </div>
    <div class="row-fluid dm-spacing">
        <div class="span12">
            <div class="span4">{{str 'LBL_DOCUMENT_MERGE_SORT_DIRECTION' module}}</div>
            <div class="span7">
                <select class="select2 dm-tag-attribute" name="sort" data-action="sortDirection"
                    placeholder="{{str 'LBL_DOCUMENT_MERGE_SELECT_DIRECTION' module}}">
                    <option></option>
                    <option value="{{str 'LBL_DOCUMENT_MERGE_ASCENDING' module}}" selected="true">
                        {{str 'LBL_DOCUMENT_MERGE_ASCENDING' module}}</option>
                    <option value="{{str 'LBL_DOCUMENT_MERGE_DESCENDING' module}}">
                        {{str 'LBL_DOCUMENT_MERGE_DESCENDING' module}}</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row-fluid dm-spacing">
        <div class="span12">
            <div class="span4">{{str 'LBL_DOCUMENT_MERGE_FIELDS' module}}</div>
            <div class="span7">
                <select class="select2 currentFields dm-tag-attribute" name="fields"
                    placeholder="{{str 'LBL_DOCUMENT_MERGE_SELECT_FIELDS' module}}" multiple="multiple">
                    <option></option>
                    {{#each collectionFields}}
                        <option value={{name}} label="{{str vname ../collectionModule}}">
                            {{str vname ../collectionModule}}
                            [{{name}}]
                        </option>
                    {{/each}}
                </select>
            </div>
        </div>
    </div>
{{/with}}
