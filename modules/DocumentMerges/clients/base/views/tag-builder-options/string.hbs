{{#with templateComponent}}
    <div class="row-fluid dm-spacing">
        <div class="span11">
            <textarea class="preview dm-select" readonly>{{preview}}</textarea>
        </div>
    </div>
    {{#if paddingOnly}}
        <div class="row-fluid dm-spacing">
            <div class="span12">
                <div class="span4">{{str 'LBL_DOCUMENT_MERGE_PADDING' module}}</div>
                <div class="span4">
                    <input type="text" name="pad" class="dm-tag-attribute">
                </div>
            </div>
        </div>
    {{else}}
        <div class="row-fluid dm-spacing">
            <div class="span12">
                <div class="span4">{{str 'LBL_DOCUMENT_MERGE_CAPITALIZE' module}}</div>
                <div class="span8">
                    <input type="checkbox" name="capitalize" class="dm-tag-attribute">
                </div>
            </div>
        </div>
        <div class="row-fluid dm-spacing">
            <div class="span12">
                <div class="span4">{{str 'LBL_CASE'}}</div>
                <div class="span7">
                    <select class="select2 dm-tag-attribute dm-select"
                        placeholder="{{str 'LBL_DOCUMENT_MERGE_CASE_SELECT' module}}" name="case">
                        <option></option>
                        <option value="upper" placeholder="{{str 'LBL_DOCUMENT_MERGE_UPPERCASE' module}}">
                            {{str 'LBL_DOCUMENT_MERGE_UPPERCASE' module}}</option>
                        <option value="lower" placeholder="{{str 'LBL_DOCUMENT_MERGE_LOWERCASE' module}}">
                            {{str 'LBL_DOCUMENT_MERGE_LOWERCASE' module}}</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row-fluid dm-spacing">
            <div class="span12">
                <div class="span4">{{str 'LBL_DOCUMENT_MERGE_PADDING' module}}</div>
                <div class="span4">
                    <input type="text" name="pad" class="dm-tag-attribute">
                </div>
            </div>
        </div>

        {{#if ../barcode}}
            {{partial "barcode" ../this}}
        {{/if}}
    {{/if}}
{{/with}}
