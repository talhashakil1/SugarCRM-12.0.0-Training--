{{#with templateComponent}}
    <div class="row-fluid">
        <div class="span12">
            <div class="span4">{{str 'LBL_DOCUMENT_MERGE_BARCODE' module}}</div>
            <div class="span8">
                <input type="checkbox" class="customOption dm-tag-attribute" name="format" format-value="barcode">
            </div>
        </div>
        <div class="span12 customOptions">
            <div class="span4"></div>
            <div class="span8 barcode-attributes">
                <div class="row-fluid dm-spacing">
                    <div class="span11">
                        <input type="text" class="dm-tag-attribute dm-select" name="barcode-format"
                            placeholder="{{str 'LBL_DOCUMENT_MERGE_DEFAULT_CODE' module}}" />
                    </div>
                </div>
                <div class="row-fluid dm-spacing">
                    <div class="span11">
                        <input type="text" class="dm-tag-attribute dm-select" name="barcode-width"
                            placeholder="{{str 'LBL_DOCUMENT_MERGE_DEFAULT_WIDTH' module}}" />
                    </div>
                </div>
                <div class="row-fluid dm-spacing">
                    <div class="span11">
                        <input type="text" class="dm-tag-attribute dm-select" name="barcode-height"
                            placeholder="{{str 'LBL_DOCUMENT_MERGE_DEFAULT_HEIGHT' module}}" />
                    </div>
                </div>
                <div class="row-fluid dm-spacing">
                    <div class="span11">
                        <input type="text" class="dm-tag-attribute dm-select" name="barcode-text"
                            placeholder="{{str 'LBL_DOCUMENT_MERGE_DEFAULT_OVERRIDE_TEXT' module}}" />
                    </div>
                </div>
                <div class="row-fluid dm-spacing">
                    <div class="span11">
                        <input type="text" class="dm-tag-attribute dm-select" name="barcode-textMargin"
                            placeholder="{{str 'LBL_DOCUMENT_MERGE_DEFAULT_SPACING' module}}" />
                    </div>
                </div>
                <div class="row-fluid dm-spacing">
                    <div class="span11">
                        <input type="text" class="dm-tag-attribute dm-select" name="barcode-fontSize"
                            placeholder="{{str 'LBL_DOCUMENT_MERGE_DEFAULT_TEXT_SIZE' module}}" />
                    </div>
                </div>
                <div class="row-fluid dm-spacing">
                    <div class="span11">
                        <select name="barcode-font-options" class="dm-tag-attribute dm-select"
                            placeholder="{{str 'LBL_DOCUMENT_MERGE_SELECT_FONT' module}}">
                            <option></option>
                            <option>{{str 'LBL_DOCUMENT_MERGE_STYLE_BOLD' module}}</option>
                            <option>{{str 'LBL_DOCUMENT_MERGE_STYLE_ITALIC' module}}</option>
                            <option>{{str 'LBL_DOCUMENT_MERGE_STYLE_BOLD_ITALIC' module}}</option>
                        </select>
                    </div>
                </div>
                <div class="row-fluid dm-spacing">
                    <div class="span11">
                        <select name="barcode-textAlign" class="dm-tag-attribute dm-select"
                            placeholder="{{str 'LBL_DOCUMENT_MERGE_SELECT_TEXT_ALIGN' module}}">
                            <option></option>
                            <option>{{str 'LBL_DOCUMENT_MERGE_TEXT_ALIGN_LEFT' module}}</option>
                            <option>{{str 'LBL_DOCUMENT_MERGE_TEXT_ALIGN_RIGHT' module}}</option>
                            <option>{{str 'LBL_DOCUMENT_MERGE_TEXT_ALIGN_CENTER' module}}</option>
                        </select>
                    </div>
                </div>
                <div class="row-fluid dm-spacing">
                    <div class="span11">
                        <select name="barcode-textPosition" class="dm-tag-attribute dm-select"
                            placeholder="{{str 'LBL_DOCUMENT_MERGE_SELECT_TEXT_POSITION' module}}">
                            <option></option>
                            <option>{{str 'LBL_DOCUMENT_MERGE_TEXT_POSITION_BOTTOM' module}}</option>
                            <option>{{str 'LBL_DOCUMENT_MERGE_TEXT_POSITION_TOP' module}}</option>
                        </select>
                    </div>
                </div>
                <div class="row-fluid dm-spacing">
                    <div class="span11">
                        <input type="text" name="barcode-background" class="tagAttribute barcode-attribute dm-spacing dm-select"
                            name="barcode-background" placeholder="{{str 'LBL_DOCUMENT_MERGE_BACKGROUND_COLOR' module}}" />
                    </div>
                </div>
                <div class="row-fluid dm-spacing">
                    <div class="span11">
                        <input type="text" name="barcode-lineColor" class="tagAttribute barcode-attribute dm-select" name="barcode-lineColor"
                            placeholder="{{str 'LBL_DOCUMENT_MERGE_LINES_COLOR' module}}" />
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/with}}
