{{#with templateComponent}}
    <div class="row-fluid dm-spacing">
        <div class="span12">
            <div class="span4">{{str 'LBL_DOCUMENT_MERGE_RELATE_FIELDS' module}}</div>
            <div class="span7">
                <select class="select2 dm-relate-field"
                    placeholder="{{str 'LBL_DOCUMENT_MERGE_SELECT_RELATE_FIELD' module}}">
                    <option></option>
                    {{#each relateFields}}
                        <option value={{name}} link="{{link}}" type="{{type}}" label="{{str vname ../relateModule}}"
                            {{#if selected}}selected{{/if}}>
                            {{str vname ../relateModule}} [{{name}}]
                        </option>
                    {{/each}}
                </select>
            </div>
        </div>
    </div>
    {{#eq currentRelateType "multienum"}}
        {{partial "multienum" ../this}}
    {{/eq}}
    {{#eq currentRelateType "datetime"}}
        {{partial "date" ../this}}
    {{/eq}}
    {{#eq currentRelateType "date"}}
        {{partial "date" ../this}}
    {{/eq}}
    {{#eq currentRelateType "datetimecombo"}}
        {{partial "date" ../this}}
    {{/eq}}
    {{#eq currentRelateType "bool"}}
        {{partial "bool" ../this}}
    {{/eq}}
    {{#eq currentRelateType "image"}}
        {{partial "image" ../this}}
    {{/eq}}
    {{#eq currentRelateType "string"}}
        {{partial "string" ../this}}
    {{/eq}}
    {{#eq currentRelateType "url"}}
        {{partial "url" ../this}}
    {{/eq}}
{{/with}}
