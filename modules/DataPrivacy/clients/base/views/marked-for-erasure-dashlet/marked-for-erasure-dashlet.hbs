{{#if values}}
    <table class="table dataTable erasure">
        <tr name="erasure-table-columns"><th>{{str "LBL_NAME"}}</th><th>{{str "LBL_COUNT_FIELDS_MARKED" "DataPrivacy"}}</th></tr>
    {{#each values}}
        {{#if count}}
            <tr class="header" data-module="{{../module}}"><td colspan="2" class="panel header">
                <div class="label label-module label-{{module}} pull-left" aria-hidden="true">{{moduleIconLabel module}}</div>
                <strong>{{str label ../module}} ({{count}})</strong>
            </td></tr>
            {{#if models}}
                {{#each models}}
                <tr class="record" data-module="{{../module}}" data-record-id="{{model.id}}">
                    <td class="record-name">
                        {{#with nameFieldDef}}
                            {{field ../../../../../../this model=../model}}
                        {{/with}}
                    </td>
                    <td class="record-field-marked">({{count}})</td>
                </tr>
                {{/each}}
            {{/if}}
            {{#if hasMore}}
                <tr><td colspan="2"><button data-action="show-more" data-link="{{link}}" class="btn btn-link btn-invisible more padded">{{str "LBL_SHOW_MORE"}}...</button></td> </tr>
            {{/if}}
        {{/if}}
    {{/each}}
    </table>
{{else}}
    <div class="block-footer">
    {{#if notApplicable}}
        {{str "LBL_NOT_APPLICABLE"}}
    {{else}}
        {{str "LBL_NO_RECORDS_MARKED" "DataPrivacy"}}
    {{/if}}
    </div>
{{/if}}
