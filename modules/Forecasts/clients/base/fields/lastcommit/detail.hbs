<div class='row-fluid last-commit'>
    <div class="span8 datapoints ml-2">
        <div class="pull-right">
            {{#each this.data_points}}
                <div class="datapoint flex items-center justify-end p-2 border-l border-light text-xs">
                    {{#if this.value}}
                        {{formatCurrency this.value}}
                    {{else}}
                        {{{this.error}}}
                    {{/if}}
                </div>
            {{/each}}
        </div>
    </div>
    <div class="hr hide"></div>
    <div class="span4 commit-date">
        {{#if this.commit_date}}
            <span class="relativetime">
                {{str 'LBL_LAST_COMMIT'}}{{relativeTime commit_date class='date darkRed-text font-bold'}}
                &nbsp;<span id="show_hide_history_log" class="sicon sicon-sm sicon-chevron-down"></span>
            </span>
        {{/if}}
    </div>
</div>
