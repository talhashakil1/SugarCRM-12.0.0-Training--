<div class="block preview-data">
    <!-- Preview -->
    <div class="process-design">
        <div class="thumbnail dashlet h-full flex flex-column ui-draggable" data-type="dashlet" data-action="droppable">
            <div data-dashlet="toolbar"><div class="dashlet-header">
                <div class="btn-toolbar pull-right">
                    <span sfuuid="44" class="dashlet-toolbar">
                    <a href="javascript:void(0);" track="click:" data-dashletaction="toggleMinify" rel="tooltip" data-placement="bottom" title="" name="" class="dashlet-toggle btn btn-invisible minify" data-original-title="Open/Close">
                        <i class="sicon sicon-chevron-up"></i></a>
                    </span>

                </div>
                <h4 data-toggle="dashlet" class="dashlet-title text-initial m-0">{{str 'LBL_PMSE_LABEL_PREVIEW' 'pmse_Inbox'}}</h4>
            </div></div>

            <div data-dashlet="dashlet" class="dashlet-content flex-grow"><div>
                <div class="help-dashlet-content">
                    <div class="help-body">
                        <a href="{{image_preview_url}}" target="_blank">
                            <img id="image-preview" src="{{image_preview_url}}" width="100%">
                        </a>
                    </div>

                    <div class="help-more">

                    </div>
                </div>
            </div></div>
            <div class="swappable-dashlet sicon sicon-download"></div>
        </div>
    </div>

{{#each meta.panels}}
{{#each fields}}
    <div class="record-cell field-row {{name}}-data{{#if ../hide}}{{#if ../../../hidePanel}} hide{{/if}} panel_hidden{{/if}}">
        <div class="field-label ellipsis_inline" data-name="{{name}}">{{str  label ../../model.module}}</div>
        <div class="field-value record-cell" data-type="{{type}}" name="{{name}}" data-name="{{name}}">
            {{field ../../this model=../../model template="preview"}}
        </div>
    </div>
{{/each}}
{{/each}}
    <div class="field-row">
        <div class="field-label{{#unless hiddenPanelExists}} hide{{/unless}} show-hide-toggle">
            <button class="btn btn-link btn-invisible more{{#if hideMoreButton}} hide{{/if}}"
                    data-moreless="more"
                    data-target=".panel_hidden">{{str "LBL_SHOW_MORE"}}...</button>
            <button class="btn btn-link btn-invisible less{{#if hideLessButton}} hide{{/if}}"
                    data-moreless="less"
                    data-target=".panel_hidden">{{str "LBL_SHOW_LESS"}}</button>
        </div>
    </div>
</div>
