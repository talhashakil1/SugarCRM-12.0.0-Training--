<style>
    /* TODO remove this section and put in the sass file */
    #ProjectTitle {
        font-family: Arial,Verdana,Helvetica,sans-serif;
        color: var(--text-color);
        font-weight: bold;
        font-size: 15px;
        margin: 2px 0 0 0;
    }

    .pmse-toolbar-buttons {
        width: 83%;
        padding: 3px 0 0 10px;
        position: absolute;
        left: 0;
    }

    .pmse-toolbar-title {
        width: 17%;
        position: absolute;
        right: 0;
    }
    .pmse-toolbar-title .icon-remove {
        margin: 5px 6px 0 0;
    }
    .pmse-toolbar-title .icon-edit-title {
        margin-top: 5px;
    }
    .navbtn {
        width: 28px;
        height: 28px;
        margin: 0 5px 0 0;
        border: 1px solid var(--border-color);
        border-radius: 3px;
        display: block;
        float: left;
        position: relative;
        text-align: center;
        background-color: var(--btn-background);
    }

    .navbtn.mod {
        color: white;
        font-family: Helvetica;
        font-size: 10px;
        line-height: 17px;
        text-indent: 2px;
        text-align: left;
    }
    .navbtn > [class*="fa-"] {
        color: var(--sicon-color);
        font-size: 1.35em;
        line-height: 1.75em;
    }

    .navbtn:hover > [class*="fa-"] {
        color: var(--sicon-hover-color);
    }

    .navbtn .fa-rotate-45 {
        -webkit-transform: rotate(45deg);
        -moz-transform: rotate(45deg);
        -ms-transform: rotate(45deg);
        -o-transform: rotate(45deg);
        transform: rotate(45deg);
        filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=.5);
    }
    /*
    .navbtn .fa-stack {
        margin-left: -2px;
    }
    .navbtn .fa-small {
        font-size: 1.05em;
    }
    .navbtn .fa-xsmall {
        font-size: .70em;
    }
    */
    .navbtn .overlay {
        position: absolute;
        top: 5px;
        left: 10.3px;
        z-index: 1;
        font-size: .85em;
        color: #fff;
    }
    /* Leads */
    .navbtn.leads {
        background-color: #176DE5;
    }
    /* Opportunity */
    .navbtn.opportunity {
        background-color: #6D17E5;
    }
    /* Documents */
    .navbtn.documents {
        background-color: #6F1C0B;
    }

    .navdiv {
        width: 10px;
        height: 7px;
        /*border-radius: 15px;*/
        /*background-color: #ccc;*/
        margin: 12px 5px 0 0;
        float: left;
    }
    .navdiv.lg {
        width: 50px;
    }

    #refreshing-errors {
        visibility: hidden;
        width: 130px;
        left: 50%;
        bottom: 10%;
        transform: translateX(-50%);
        background-color: #f6f6f6;
        color: #000;
        text-align: center;
        border-radius: 2px;
        padding: 5px;
        position: fixed;
        z-index: 1;
        border-style: solid;
        border-width: 1px;
    }

    #refreshing-errors.show {
        visibility: visible;
       -webkit-animation: fadein 0.5s;
       animation: fadein 0.5s;
    }

    @-webkit-keyframes fadein {
        from {bottom: 0; opacity: 0;}
        to {bottom: 10%; opacity: 1;}
    }

    @keyframes fadein {
        from {bottom: 0; opacity: 0;}
        to {bottom: 10%; opacity: 1;}
    }

</style>
