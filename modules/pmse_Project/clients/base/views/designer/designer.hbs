<div id="container">
    <div class="pane ui-layout-center">
        <div id="jcore_designer" style='background-image: url("{{this.designerBackgroundImage}}");'></div>
    </div>
    <div id="Error-pane" class="pane ui-layout-south">
        <div id="refreshing-errors">{{str "LBL_PMSE_VALIDATOR_REFRESH_ERROR_LIST" this.module}}</div>
        <table class="table table-striped table-sm" id="Error-table" width="100%">
            <thead>
                <tr>
                    <th style="text-align: left">Element Name</th>
                    <th style="text-align: left">Issue</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <div class="pane ui-layout-north no-border" style="background-color: var(--headerpane-background);">
        <div id="adam_toolbar">
            <div class="pmse-toolbar-buttons">

                <!-- Other Modules -->
                <span id="AdamEventOtherModule" type="draggable" rel="tooltip" title="" data-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_OTHER_MODULE_EVENT" this.module}}" class="navbtn othermods"><i class="fa fa-play-circle"></i></span>

                <span class="navdiv"></span>

                <!-- Wait -->
                <span id="AdamEventTimer" type="draggable" rel="tooltip" title="" data-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_WAIT" this.module}}" class="navbtn"><i class="fa fa-clock-o"></i></span>

                <!-- Receive Message -->
                <span id="AdamEventReceiveMessage" type="draggable" rel="tooltip" title="" data-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_RECEIVE_MESSAGE" this.module}}" class="navbtn"><i class="fa fa-inbox"></i></span>

                <!-- Send Message -->
                <span id="AdamEventMessage" type="draggable" rel="tooltip" title="" data-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_SEND_MESSAGE" this.module}}" class="navbtn"><i class="fa fa-envelope"></i></span>

                <span class="navdiv"></span>

                <!-- User Task -->
                <span id="AdamUserTask" type="draggable" rel="tooltip" title="" data-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_USER_TASK" this.module}}" class="navbtn"><i class="fa fa-stop"></i></span>

                <!-- Action -->
                <span id="AdamScriptTask" type="draggable" rel="tooltip" title="" data-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_ACTION" this.module}}" class="navbtn"><i class="fa fa-cogs"></i></span>

                <span class="navdiv"></span>

                <!-- Exclusive -->
                <span id="AdamGatewayExclusive" type="draggable" rel="tooltip" title="" data-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_EXCLUSIVE" this.module}}" class="navbtn"><i class="fa fa-stop fa-rotate-45"></i></span>

                <!-- Parallel -->
                <span id="AdamGatewayParallel" type="draggable" rel="tooltip" title="" data-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_PARALLEL" this.module}}" class="navbtn"><i class="fa fa-plus overlay"></i><i class="fa fa-stop fa-rotate-45"></i></span>

                <span class="navdiv"></span>

                <!-- End Event -->
                <span id="AdamEventEnd" type="draggable" rel="tooltip" title="" data-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_END_EVENT" this.module}}" class="navbtn"><i class="fa fa-circle"></i></span>

                <span class="navdiv"></span>

                <!-- Comment -->
                <span id="AdamTextAnnotation" type="draggable" rel="tooltip" title="" data-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_COMMENT" this.module}}" class="navbtn"><i class="fa fa-comment"></i></span>

                <span class="navdiv lg"></span>

                <!-- Undo -->
                <span id="ButtonUndo" type="" rel="tooltip" title="" data-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_UNDO" this.module}}" class="navbtn"><i class="fa fa-undo"></i></span>

                <!-- Redo -->
                <span id="ButtonRedo" type="" rel="tooltip" title="" data-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_REDO" this.module}}" class="navbtn"><i class="fa fa-undo fa-flip-horizontal"></i></span>

                <!-- Save -->
                <span id="ButtonSave" type="" rel="tooltip" title="" data-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_SAVE" this.module}}" class="navbtn"><i class="fa fa-save"></i></span>

                <!-- Validate -->
                <span id="ButtonValidate" type="" rel="tooltip" title="" data-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_VALIDATE" this.module}}" class="navbtn"><i class="fa fa-check-square"></i></span>

                <!-- Save and Validate -->
                <span id="ButtonSaveValidate" type="" rel="tooltip" title="" data-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_SAVE_AND_VALIDATE" this.module}}" class="navbtn"><i class="fa fa-save fa-sm"></i><i class="fa fa-check-square fa-sm"></i></span>

                <!-- View Errors -->
                <span id="ButtonToggleErrorPane" type="" rel="tooltip" title="" data-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_VIEW_ERRORS" this.module}}" class="navbtn"><i class="fa fa-exclamation-triangle exclamation-triangle-off"></i></span>

                <!-- Zoom -->
                <select id="zoom" class="friendly-select">
                    <option value="1">50%</option>
                    <option value="2">75%</option>
                    <option value="3" selected= "selected">100%</option>
                    <option value="4">150%</option>
                    <option value="5">175%</option>
                </select>

            </div>
            <div class="pmse-toolbar-title">
                <div style="display:block; float:right;"><button class="btn btn-invisible btn-close-designer" rel="tooltip" title="" data-placement="bottom" data-original-title="Close Designer">
                    <i class="fa fa-times"></i>
                </button>
                </div>
                <div style="display:block; float:right;">
                    <div id="ProjectTitle"></div>
                    <input id="txt-title" class="input-small" style="margin: 7px 0 0 0; display: none;">
                </div>
                <div class="icon-edit-title" style="display:none; float:right;">
                    <a class="record-edit-link btn btn-invisible" data-type="url" data-name="website"><i class="fa fa-pencil"></i></a>
                </div>
            </div>
        </div>

    </div>
</div>
