<div class="dropdown">
    {{! Flexible dashboards for Sugar 10.2 and above }}
    {{#if (flexibleDashboards)}}
        {{partial 'hint-dashboardtitle' this value=value dir=dir hasEditAccess=hasEditAccess name=name type=type}}
        <a class="dropdown-toggle btn btn-invisible btn-link" data-toggle="dropdown" href="javascript:void(0);">
            <i class="fa fa-caret-down"></i>
        </a>
    {{else}}
        <a class="dropdown-toggle btn btn-invisible btn-link" data-toggle="dropdown" href="javascript:void(0);">{{value}}<i class="fa fa-caret-down"></i></a>
    {{/if}}
<ul class="dropdown-menu">
    {{!
        FIXME TY-1464: Don't hardcode the "Dashboards" module.
    }}
    <li><a href="javascript:void(0);" data-action="manager"><i class="fa fa-bars"></i> {{str "LBL_MANAGE_DASHBOARDS" "Dashboards"}}</a></li>
    <li class="divider"></li>
    {{#if dashboards}}
        {{#each this.dashboards.models}}
            <li><a href="javascript:void(0);" data-id="{{fieldValue this "id"}}">{{fieldValue this "name"}}</a></li>
        {{/each}}
    {{else}}
        <li>
            <div class="alert-process">
                <strong>{{loading 'LBL_ALERT_TITLE_LOADING'}}</strong>
            </div>
        </li>
    {{/if}}
</ul>
</div>
