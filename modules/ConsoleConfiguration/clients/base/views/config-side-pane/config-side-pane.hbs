<div class="config-side-pane-all">
    {{#each collection.models}}
        <div id="{{attributes.enabled_module}}-side" class="config-side-pane" style="display: none">
            {{!-- left column --}}
            <div class="column border-right">
                {{#each ../meta.left-panels}}
                    <h4>
                        {{str label ../../this.module}}
                    </h4>
                    {{#each fields}}
                        <div class="row-fluid">
                            <div class="{{#if span}}span{{span}}{{/if}}>
                                {{#if label}}
                                    <div class="record-label pipeline-record-label" data-name="{{name}}">
                                        <h5>
                                            {{str label ../../../../this.module}}
                                        </h5>
                                    </div>
                                {{/if}}
                                <span class="normal">
                                    {{field ../../../this model=../../this template="edit"}}
                                </span>
                            </div>
                        </div>
                    {{/each }}
                {{/each }}
            </div>

            {{!-- right column --}}
            <div class="column border-right">
                {{#each ../meta.right-panels}}
                    <h4>
                        {{str label ../../this.module}}
                    </h4>
                    {{#each fields}}
                        <div class="row-fluid">
                            <div class="{{#if span}}span{{span}}{{/if}}>
                                {{#if label}}
                                    <div class="record-label pipeline-record-label" data-name="{{name}}">
                                        <h5>
                                            {{str label ../../../../this.module}}
                                        </h5>
                                    </div>
                                {{/if}}
                                <span class="normal">
                                    {{field ../../../this model=../../this template="edit"}}
                                </span>
                            </div>
                        </div>
                    {{/each }}
                {{/each }}
            </div>
        </div>
    {{/each }}
</div>
