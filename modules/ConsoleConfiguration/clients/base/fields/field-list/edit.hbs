<nav>
    <ul id="columns-sortable" class="field-list connectedSortable" module_name="{{this.model.attributes.enabled_module}}">
        {{#each mappedFields}}
            {{#notEq this.length "1"}}
                <li class="pill outer multi-field-block">
                    <ul class="multi-field-sortable multi-field connectedSortable">
                        <li class="list-header" fieldname="{{this.[0].parent_name}}" fieldlabel="{{#each this}}{{#unless @first}}/{{/unless}}{{label}}{{/each}}" rel="tooltip" data-original-title="{{#each this}}{{#unless @first}}/{{/unless}}{{str label ../../../model.attributes.enabled_module}}{{/each}}">
                            {{#each this}}
                                {{#unless @first}}/{{/unless}}
                                {{str label ../../../model.attributes.enabled_module}}
                            {{/each}}
                        <i class="sicon sicon-remove multi-field-column-remove"></i>
                        </li>
                        {{#each this}}
                            <li class="pill" fieldname="{{name}}" fieldlabel="{{label}}" rel="tooltip"
                                data-original-title="{{str label ../../../model.attributes.enabled_module}}">
                                {{str label ../../../model.attributes.enabled_module}}
                                <i class="sicon sicon-remove console-field-remove"></i>
                            </li>
                        {{/each}}
                    </ul>
                </li>
            {{/notEq}}
            {{#eq this.length "1"}}
                <li class="pill outer"
                    fieldname="{{this.[0].name}}"
                    fieldlabel="{{this.[0].label}}"
                    rel="tooltip"
                    data-original-title="{{str this.[0].label ../../model.attributes.enabled_module}}">
                    {{str this.[0].label ../../model.attributes.enabled_module}}
                    <i class="sicon sicon-remove console-field-remove"></i>
                </li>
            {{/eq}}
        {{/each}}
    </ul>
</nav>
