<div class='config-side-pane-all'>
    {{#each fieldModels}}
        <div id='{{fieldModule}}-side' class='config-side-pane' style='display: none'>
            {{!-- left column --}}
            <div class='column border-right'>
                {{#with ../meta.leftpanel}}
                    <h4>
                        {{str label ../module}}
                    </h4>
                    {{#each fields}}
                        <div class='row-fluid'>
                            <div class='{{#if span}}span{{span}}{{/if}}'>
                                {{field ../../../this model=../../this template='edit'}}
                            </div>
                        </div>
                    {{/each}}
                {{/with}}
                <div class='sugarlive-restores-summary-settings'>
                    <ul>
                        <li>
                            <a href='javascript:void(0)' class='restore-defaults-btn' role='button' data-module='{{fieldModule}}'>
                                {{str 'LBL_CONSOLE_DIRECTIONS_RESTORE_DEFAULTS_LINK' ../module}}
                            </a>
                            {{str 'LBL_CONSOLE_DIRECTIONS_RESTORE_DEFAULTS' ../module}}
                        </li>
                    </ul>
                </div>
            </div>


            {{!-- right column --}}
            <div class='column border-right'>
                {{#with ../meta.rightpanel}}
                    <h4>
                        {{str label ../module}}
                    </h4>
                    {{#each fields}}
                        <div class='row-fluid'>
                            <div class='{{#if span}}span{{span}}{{/if}}'>
                                {{field ../../../this model=../../this template='edit'}}
                            </div>
                        </div>
                    {{/each}}
                {{/with}}
            </div>
        </div>
    {{/each}}
</div>
