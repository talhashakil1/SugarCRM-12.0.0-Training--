<div class="conversation conversation-{{platform}}">
{{#each value}}
    <div class="message-container message-container{{#eq author 'CUSTOMER'}}1{{else}}2{{/eq}}">
        <div class="message-avatar">
            <div class="avatar">
                <i class="sicon sicon-user"></i>
            </div>
        </div>

        <div class="message-box">
            {{#each messagesList}}
                <div class="message-item">
                    {{this}}
                </div>
            {{/each}}
        </div>
    </div>
{{/each}}
</div>

{{#if moreBtn}}
    <a class="more-btn">{{str 'LBL_MORE'}}</a>
{{/if}}
