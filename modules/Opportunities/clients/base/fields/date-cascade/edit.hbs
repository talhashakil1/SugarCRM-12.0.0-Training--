<div class="input-append date">
    <div class="date-wrapper">
        <input type="text" data-type="date" name="{{name}}" class="datepicker" value="{{value}}"{{#if def.tabindex}}
               tabindex="{{def.tabindex}}"{{/if}} placeholder="{{fieldPlaceholder}}">
        <span class="add-on" data-icon="calendar">
            <i class="sicon sicon-calendar"></i>
        </span>
        {{#unless hideHelp}}{{#if def.help}}<p class="help-block">{{str def.help module}}</p>{{/if}}{{/unless}}
    </div>
    {{#if this.displayCheckbox}}
        <label class="cascade-label-wrapper{{#if cascadeCheckboxDisabled}} disabled{{/if}}">
            <input type="checkbox" class="{{def.name}}_should_cascade" {{#if shouldCascade}}checked{{/if}} {{#if cascadeCheckboxDisabled}}disabled{{/if}}/>
            <span class="cascade-label">{{str lblString}}</span>
        </label>
    {{/if}}
</div>
