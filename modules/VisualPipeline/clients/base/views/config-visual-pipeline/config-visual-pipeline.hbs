<div class="accordion-heading active">
        <span class="pull-left step-circle pipeline-step-circle">
            <span>2</span>
            <i class="sicon sicon-lg sicon-check-circle-lg"></i>
        </span>
    <h4>{{str "LBL_PIPELINE_MODULE_SETTINGS" this.module}}</h4>
</div>

<div class="accordion-inner">
    <div id="tabs" class="">
        {{#if collection.length}}
            <ul class="ul nav nav-tabs">
                {{#each collection.models}}
                    <li class="tab tab-badgeable">
                        <a href="#{{attributes.enabled_module}}">
                            <span class="tab-title font-semibold">{{getModuleName attributes.enabled_module plural=true}}</span>
                        </a>
                    </li>
                {{/each}}
            </ul>
            {{#each collection.models}}
                    <div id="{{attributes.enabled_module}}" class="pipeline-fields">
                        {{#each ../meta.customizedFields}}
                            <div class="row-fluid">
                                {{#each this}}
                                    <div class="{{#if span}}span{{span}}{{/if}} record-cell">
                                        {{#if label}}
                                            <div class="record-label pipeline-record-label" data-name="{{name}}">
                                                <h5>
                                                    {{str label ../../../../this.module}}
                                                </h5>
                                            </div>
                                        {{/if}}
                                        <span class="normal">
                                            {{field ../../../../this model=../../this template="edit"}}
                                        </span>
                                    </div>
                                {{/each }}
                            </div>
                        {{/each }}
                    </div>
            {{/each}}
        {{else}}
            <div class="block-footer">
                {{str 'LBL_PIPELINE_CONFIG_NO_DATA' this.module}}
            </div>
        {{/if}}
    </div>
</div>
