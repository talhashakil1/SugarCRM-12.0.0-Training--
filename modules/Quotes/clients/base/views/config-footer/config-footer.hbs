<div class="accordion-heading">
    <a id='{{name}}Title' class="accordion-toggle" data-help-id="{{name}}" data-toggle="collapse" data-parent="#config-accordion" href="#{{name}}Collapse"></a>
</div>
<div id="{{name}}Collapse" class="accordion-body collapse quotes-config">
    <div class="accordion-inner">
        <h4>{{str 'LBL_CONFIG_GRAND_TOTAL_FOOTER_PREVIEW' 'Quotes'}}</h4>

        <div class="quote-footer-rows"></div>

        <div class="worksheet-columns-directions">
            <div>
                <strong>{{str 'LBL_CONFIG_DIRECTIONS' 'Quotes'}}</strong>
            </div>
            <div>
                {{{quotesDocumentation}}}
            </div>
            <br>
            <div>
                {{str 'LBL_CONFIG_GRAND_TOTAL_FOOTER_DIRECTIONS_1' 'Quotes'}}
            </div>
            <div>
                {{listDefaultFieldNameLabels}}
            </div>
            <div>
                <a href="javascript:void(0)" class="restore-defaults-btn" role="button">
                    {{str 'LBL_CONFIG_COLUMNS_RESTORE_DEFAULTS' 'Quotes'}}
                </a>
            </div>
        </div>

    </div>
</div>
