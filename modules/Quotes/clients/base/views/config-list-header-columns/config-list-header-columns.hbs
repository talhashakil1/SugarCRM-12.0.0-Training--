<div class="flex-list-view scroll-width left-actions quote-data-table-scrollable">
    <div class="flex-list-view-content">
        <table class="table dataTable quote-data-list-table reorderable-columns">
            <thead>
                <tr class="flex-list-row-header">
                    {{#each leftColumns}}
                        <th{{#if name}} data-fieldname="{{name}}"{{/if}}>
                            {{field ../this model=../model template='list'}}
                        </th>
                    {{/each}}

                    {{#each _fields.all}}
                        <th class="{{widthClass}}" {{#if styles}} style="{{styles}}"{{/if}}
                            {{#if name}} data-fieldname="{{name}}"{{/if}}>

                            <div>
                                <div class="th-droppable-placeholder" data-droppableindex="{{@index}}"></div>
                                <div data-draggable="true">
                                    <span>
                                        {{str label labelModule}}
                                    </span>
                                </div>
                                {{#if @last}}
                                    <div class="th-droppable-placeholder th-droppable-placeholder-last"
                                         data-droppableindex="{{../../../this._fields.length}}"></div>
                                {{/if}}
                            </div>
                        </th>
                    {{/each}}
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
