<div class="alert-page-overlay"></div>
<div class="alert-confirmation">
    <div class="alert alert-warning alert-block rounded-md shadow-lg bg-alert-background block m-auto">
        <div class="flex">
            <div class="indicator pt-5 px-4">
                <i class="sicon sicon-32 sicon-lg sicon-warning-lg"></i>
            </div>
            <span class="text pt-5 pr-4">
                <strong>{{str 'LBL_WARNING_TITLE' 'Calendar'}}:</strong>
                {{str 'LBL_CALENDAR_CONFIRM_CHANGE_RECORD' 'Calendar'}}
            </span>
        </div>
        <div class="row-fluid flex justify-end">
            <a class="alert-btn-cancel px-4 py-4 tbold uppercase" data-action="cancel">{{str 'LBL_CANCEL_BUTTON_LABEL'}}</a>
            <a class="alert-btn-confirm px-4 py-4 tbold uppercase" data-action="confirm">{{str 'LBL_CONFIRM_BUTTON_LABEL'}}</a>
            <a class="alert-btn-saveAndSendEmails px-4 py-4 tbold uppercase"
                data-action="saveAndSendEmails">{{str 'LBL_SAVE_AND_INVITES_BUTTON_LABEL' 'Calendar'}}</a>
        </div>
    </div>
</div>
