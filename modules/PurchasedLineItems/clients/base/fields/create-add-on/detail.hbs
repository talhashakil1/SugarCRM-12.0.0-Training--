<a class="rowaction" href="javascript:void(0);"
    data-action="link"
    {{#if def.tooltip}}
       rel="tooltip"
       data-container="body"
       data-placement="bottom"
       data-original-title="{{str def.tooltip module}}"
    {{/if}}
    name="{{name}}">
    {{#if def.icon}}<i class="{{buildIcon def.icon}}"></i>{{/if}}{{str label}}</a>
    <ul class="dropdown-inset">
        <li>
            <a href="javascript:void(0);" class="rowaction" role="button" tabindex="0" name="new_opportunity_button" data-action="new_opportunity">{{str 'LBL_NEW_OPPORTUNITY' module}}</a>
        </li>
        <li>
            <a href="javascript:void(0);" class="rowaction" role="button" tabindex="0" name="existing_opportunity_button" data-action="existing_opportunity">{{str 'LBL_EXISTING_OPPORTUNITY' module}}</a>
        </li>
    </ul>
