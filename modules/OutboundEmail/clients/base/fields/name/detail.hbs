{{#if value}}
<div class="ellipsis_inline relate-field-container" data-placement="bottom" title="{{value}}">
    {{#if def.link}}
        <span class="ellipsis_inline">
            <a href="{{#if def.events}}javascript:void(0);{{else}}{{href}}{{/if}}">{{value}}</a>
        </span>
        {{partial 'focus-icon' this this}}
    {{else}}
        {{value}}
    {{/if}}
</div>
{{/if}}
{{#unless hideHelp}}{{#if def.help}}<p class="help-block">{{str def.help module}}</p>{{/if}}{{/unless}}
