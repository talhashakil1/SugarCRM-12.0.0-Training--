<div class="activity-card-content-body collapsed-timeline">
{{#each meta.panels}}
    <div class="{{css_class}}">
        {{#notEq name "panel_attachments"}}
            {{#each ../fields}}
                {{field ../../../this model=../../../activity template="preview"}}
            {{/each}}
        {{/notEq}}
        {{#eq name "panel_attachments"}}
            {{#if ../../attachments}}
                {{#each ../../fields}}
                    {{field ../../../../this model=../../../../model template="detail"}}
                {{/each}}
            {{/if}}
        {{/eq}}
    </div>
{{/each}}
</div>
<button data-action="toggle" class="btn btn-link btn-invisible toggle-text activity-card-show-more">
    {{str 'LBL_ACTIVITY_TIMELINE_SHOW_MORE' module}}
</button>
<button data-action="toggle" class="btn btn-link btn-invisible toggle-text activity-card-show-less">
    {{str 'LBL_ACTIVITY_TIMELINE_SHOW_LESS' module}}
</button>
{{#if dateModified}}
    <div class="activity-date-modified">
        ({{str 'LBL_ACTIVITY_MODIFIED'}} {{dateModified}})
    </div>
{{/if}}
