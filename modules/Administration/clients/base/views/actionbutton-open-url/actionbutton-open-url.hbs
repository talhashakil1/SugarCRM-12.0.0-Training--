<div class="span12 record-cell edit" data-type="text">
    <div class="labels-on-side">
        <div class="record-label-wrapper span2">
            <div class="record-label">
                {{str "LBL_ACTIONBUTTON_CALCULATED"}}
            </div>
        </div>
        <div class="record-link-wrapper span4">
            <span class="normal index">
                <span class="edit">
                    <input type="checkbox" data-fieldname="calculated" value="" {{#if this._properties.calculated}}checked{{/if}}>
                </span>
            </span>
        </div>
    </div>
</div>

<div class="span12 record-cell edit" data-type="text">
    <div class="labels-on-side">
        <div class="record-label-wrapper span2">
            <div class="record-label">
                {{str "LBL_ACTIONBUTTON_URL"}}
            </div>
        </div>
        <div class="record-link-wrapper span4">
            <span class="normal index">
                <span class="edit">
                    <div class="span6 hidden" data-fieldname="formula"></div>
                    <textarea class="span6" data-fieldname="url" type="text"
                        data-toggle="tooltip" data-placement="top" title="Url">{{this._properties.url}}</textarea>
                </span>
            </span>
        </div>
    </div>
</div>
