<div class="ab-update-field">
    <div class="ab-update-field-name">{{_fieldLabel}}
        <a class="btn btn-default" data-action="remove-field">
            <i class="sicon sicon-minus"></i>
        </a>
    </div>
    <div class="span12 record-cell edit" data-type="text">
        <div class="labels-on-side">
            <div class="record-label-wrapper span1">
                <div class="record-label">
                    {{str "LBL_ACTIONBUTTON_CALCULATED"}}
                </div>
            </div>
            <div class="record-link-wrapper span5">
                <span class="normal index">
                    <span class="edit">
                        <input type="checkbox" data-fieldname="calculated" {{#if
                            _properties._isCalculated}}checked{{/if}}>
                    </span>
                </span>
            </div>
        </div>
    </div>
    <div class="span12 record-cell edit" data-type="text">
        <div class="labels-on-side">
            <div class="record-label-wrapper span1">
                <div class="record-label" title="{{_fieldLabel}}">
                    {{_fieldLabel}}
                </div>
            </div>
            <div class="record-link-wrapper span5">
                <span class="normal index">
                    <div class="edit inherit-width ab-update-field-container" data-container="field">
                    </div>
                </span>
            </div>
        </div>
    </div>
</div>
