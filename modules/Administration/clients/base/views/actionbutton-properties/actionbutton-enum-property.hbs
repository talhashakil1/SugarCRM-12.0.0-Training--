<div class="span6 record-cell edit" data-type="text">
    <div class="ab-admin-button-property labels-on-side">
        <div class="record-label-wrapper span2">
            <div class="record-label">
                {{str data.label}}
            </div>
        </div>
        <div class="record-link-wrapper span4">
            <span class="normal index">
                <span class="edit">
                    <select class="inherit-width" data-id="{{data.id}}">
                        {{#each data.options}}
                            <option value="{{@key}}" {{#eq ../data.value @key }}selected{{/eq}}>
                                {{this}}
                            </option>
                        {{/each}}
                    </select>
                </span>
            </span>
        </div>
    </div>
</div>
