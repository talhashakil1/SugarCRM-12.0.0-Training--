<div class="record ab-admin-button-properties">
    <button class="btn btn-invisible" type="button" data-toggle="collapse" data-target="[data-container=properties]"
        aria-expanded="false" aria-controls="[data-container=properties]">
        <h1><i class="sicon sicon-chevron-down"></i> {{str "LBL_ACTIONBUTTON_PROPERTIES"}}</h1>
    </button>
    <div class="in collapse" data-container="properties">
        {{#each properties}}
            {{partial template ../this data=this}}
        {{/each}}
        <div class="span6 record-cell edit" data-type="text" data-container="formula">
            <div class="labels-on-side">
                <div class="record-label-wrapper span2">
                    <div class="record-label">
                        {{str "LBL_ACTIONBUTTON_FORMULA"}}
                    </div>
                </div>
                <div class="record-link-wrapper span4">
                    <span class="normal index">
                        <span class="edit" data-fieldname="formula">
                        </span>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
