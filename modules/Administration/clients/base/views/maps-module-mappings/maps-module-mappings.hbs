<div class="tab-pane fade active in maps-module-mappings">
    <div class="row-fluid">
        <div class="span12 padded" data-type="title">
            <h4 class="tbold">{{this.options.widgetModule}} {{str 'LBL_MAPS_MODULE_MAPPINGS' module}}</h4>
        </div>
        <div class="record span7">
            <div class="row-fluid">
                <div class="span8 record-cell edit" >
                    <span class="detail">
                        <div class="labels-on-side">
                            <div class="record-label-wrapper span2">
                                <div class="ellipsis_inline record-label">
                                    <span class="text-overflow">{{str "LBL_MAPS_MAPPING_TYPE"}}</span>
                                </div>
                            </div>
                            <div class="record-link-wrapper span3">
                                <span class="normal index">
                                    <span class="edit">
                                        <select class="select2 inherit-width" data-fieldname="{{this.id}}" data-action="mapping-type-changed">
                                                {{#each _mappingTypes}}
                                                        <option value={{@key}}>{{str this}}</option>
                                                {{/each}}
                                        </select>
                                    </span>
                                </span>
                            </div>
                        </div>
                    </span>
                </div>
                <div class="span8 record-cell edit" data-container="mapping-related-record">
                    <span class="detail">
                        <div class="labels-on-side">
                            <div class="record-label-wrapper span2">
                                <div class="ellipsis_inline record-label">
                                    <span class="text-overflow">{{str 'LBL_MAPS_RELATE_RECORD'}}</span>
                                </div>
                            </div>
                            <div class="record-link-wrapper span3">
                                <span class="normal index">
                                    <span class="edit">
                                        <select class="select2 inherit-width" data-fieldname="{{this.id}}" data-action="related-record-changed">
                                                {{#each _relatedRecords}}
                                                        <option value={{@key}}>{{str this.label ../widgetModule}}</option>
                                                {{/each}}
                                        </select>
                                    </span>
                                </span>
                            </div>
                        </div>
                    </span>
                </div>
                {{#each _mappingData}}
                    <div class="span8 record-cell edit" data-container="mappings-container">
                        <span class="detail">
                            <div class="labels-on-side">
                                <div class="record-label-wrapper span2">
                                    <div class="ellipsis_inline record-label">
                                        <span class="text-overflow">{{str this.label 'Users'}}</span>
                                    </div>
                                </div>
                                <div class="record-link-wrapper span3">
                                    <span class="normal index">
                                        <span class="edit">
                                            <select class="select2 inherit-width" data-fieldname="{{this.id}}" data-action="mapping-changed">
                                                {{#each ../_fields}}
                                                        <option value={{@key}}>{{str this}}</option>
                                                {{/each}}
                                            </select>
                                        </span>
                                    </span>
                                </div>
                            </div>
                        </span>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
