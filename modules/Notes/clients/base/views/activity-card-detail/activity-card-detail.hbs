<div class="record-icon" rel="tooltip" title={{moduleIconToolTip module}}>
    <i class="{{buildIcon activity.attributes.icon_class}}"></i>
</div>
{{#each meta.panels}}
    <div class="{{css_class}}">
        {{#each fields}}
            {{#eq this.name "portal_flag"}}
                {{#if ../../../portalFlag}}
                    {{str "LBL_PORTAL" ../../../../module}}
                {{/if}}
            {{else}}
                {{field ../../../this model=../../../activity template="preview"}}
            {{/eq}}
        {{/each}}
    </div>
{{/each}}
<div class="record-details" rel="tooltip" data-placement="bottom" title="{{str 'LBL_LIST_DATE_ENTERED'}}">
    <div class="record-date-details">
        <div class="date-day">
            {{detailDay}}
        </div>
        <div class="date-date-time">
            {{detailDateTime}}
        </div>
    </div>
</div>
