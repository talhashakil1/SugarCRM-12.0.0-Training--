<div class="select2-container select2-container-multi select2-choices-pills-close
    select2 span12 multi-attachments-detail-view">
    <ul class="select2-choices">
        {{#each value}}
            <li class="select2-search-choice">
                <div>
                <span class="select2-choice-type" rel="tooltip" data-original-title="{{fileName}}{{fileExt}}">
                    <a class="ellipsis_inline multi-attachment-link"
                       data-placement="bottom"
                       href="{{url}}"
                       data-url="{{url}}"
                       target="_blank">{{fileName}}
                    </a>
                    <a class="multi-attachment-link-type"
                       href="{{url}}"
                       data-url="{{url}}"
                       target="_blank">{{fileExt}}</a>
                </span>
                </div>
            </li>
        {{/each}}
        {{#if value}}
            <li>
                <button class="btn-link btn-invisible multi-attach-download-all-btn" data-action="download-all">
                    <i class="sicon sicon-download"></i>{{str this.download_label this.module}}
                </button>
            </li>
        {{/if}}
    </ul>
</div>
{{#if singleImage }}
    <a class="attachment-preview"
       data-placement="bottom"
       title="{{value.[0].name}}"
       href="{{value.[0].url}}"
       data-url="{{value.[0].url}}"
       target="_blank">
        <img src="{{value.[0].url}}"  alt="{{value.[0].name}}"/>
    </a>
{{/if}}
