<a class="rowaction" href="javascript:void(0);"
   data-action="link"
    {{#if def.tooltip}}
   rel="tooltip"
   data-container="body"
   data-placement="bottom"
   data-original-title="{{str def.tooltip module}}"
    {{/if}}
   name="{{name}}">
    {{#if def.icon}}<i class="{{buildIcon def.icon}}"></i>{{/if}}{{str label}}</a>
{{#if fetchCalled}}
    {{#if templateCollection.length}}
        <ul class="dropdown-inset">
            {{#each templateCollection.models}}
                <li>
                    <a href="javascript:void(0);"
                       data-action="{{../../../def.action}}" data-id="{{attributes.id}}"
                       data-title="{{attributes.name}}-{{attributes.id}}">{{attributes.name}}</a>
                </li>
            {{/each}}
        </ul>
    {{/if}}
{{/if}}
