<div class="input-append timeonly timeselect">
    <input
        type="text"
        data-type="time"
        name="{{name}}_time"
        value="{{value}}"
        autocomplete="off"
        {{#if def.tabindex}} tabindex="{{def.tabindex}}"{{/if}}
        placeholder="{{secondaryFieldPlaceholder}}"
    >
    <span class="add-on time timeonly" data-action="show-timepicker">
        <i class="sicon sicon-clock"></i>
    </span>
    {{#unless hideHelp}}{{#if def.help}}<p class="help-block">{{str def.help module}}</p>{{/if}}{{/unless}}
</div>
