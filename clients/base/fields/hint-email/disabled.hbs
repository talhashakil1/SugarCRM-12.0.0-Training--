{{#each value}}
    <div class="control-group email" data-emailaddress="{{email_address}}">
        <div class="input-append">
            <input type="text" class="existingAddress" data-id="{{email_address}}" value="{{email_address}}" disabled>
        </div>
        <div class="btn-toolbar prevent-mousedown">
            <div class="btn-group" data-parentEmail="{{email_address}}">
                <button type="button" disabled
                class="{{#if primary_address}}active {{/if}}is_primary btn">
                    <i class="sicon sicon-star-fill"></i>
                </button>
                <button type="button" disabled
                class="{{#if opt_out}}active {{/if}}btn">
                    <i class="sicon sicon-ban"></i>
                </button>
                <button type="button" disabled
                class="{{#if invalid_email}}active {{/if}}btn">
                    <i class="sicon sicon-lg sicon-error-lg"></i>
                </button>
            </div>
        </div>
    </div>
{{/each}}
