<div class="control-group email">
    <input type="text" value="{{email_address}}" placeholder="{{str "LBL_EMAIL_TITLE"}}"
    class="existingAddress" {{#if max_length}} maxlength="{{max_length}}"{{/if}}>
    <div class="btn-toolbar prevent-mousedown">
        <div class="btn-group" data-toggle="buttons-checkbox">
            <button type="button"
            data-emailproperty="primary_address" rel="tooltip"
            aria-pressed="{{#if primary_address}}true{{else}}false{{/if}}"
            class="{{#if primary_address}}active {{/if}}is_primary btn btn-edit"
            title="{{str "LBL_EMAIL_PRIMARY"}}" aria-label="{{str "LBL_EMAIL_PRIMARY"}}">
                <i class="sicon sicon-star-fill"></i>
            </button>
            <button type="button"
            aria-label="{{str "LBL_EMAIL_OPT_OUT"}}"
            class="{{#if opt_out}}active {{/if}}btn btn-edit"
            aria-pressed="{{#if opt_out}}true{{else}}false{{/if}}"
            data-emailproperty="opt_out" rel="tooltip" title="{{str "LBL_EMAIL_OPT_OUT"}}">
                <i class="sicon sicon-ban"></i>
            </button>
            <button type="button"
            aria-label="{{str "LBL_EMAIL_INVALID"}}"
            class="{{#if invalid_email}}active {{/if}}btn btn-edit"
            aria-pressed="{{#if invalid_email}}true{{else}}false{{/if}}"
            rel="tooltip" data-emailproperty="invalid_email" title="{{str "LBL_EMAIL_INVALID"}}">
                <i class="sicon sicon-lg sicon-error-lg"></i>
            </button>
        </div>
        <div class="btn-group prevent-mousedown">
            <a href="javascript:void(0)"
            class="btn removeEmail" rel="tooltip" title="{{str "LBL_REMOVE"}}">
                <i class="sicon sicon-minus"></i>
            </a>
        </div>
    </div>
</div>
