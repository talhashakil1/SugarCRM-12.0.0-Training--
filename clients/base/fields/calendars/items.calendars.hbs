<div class='selectAllCheckbox'>
    <input type='checkbox' {{#eq templateComponent.checked true}}checked{{/eq}} id={{name}} name='selectAll'>
    <label for={{name}}>{{str 'LBL_CALENDAR_SELECT_ALL' 'Calendar'}}</label>
</div>
{{#each items}}
    <li>
        <input type='checkbox' {{#eq selected true}}checked{{/eq}} value='{{id}}' name='calendar' id='{{id}}'
            calendarId='{{calendarId}}' userId='{{userId}}' teamId='{{teamId}}'>
        <label for='{{id}}'>
            {{~#if userId~}}
            <span class='userDot' style='background-color:{{../dotColor}}'></span>
            {{~/if}}{{name}}</label>

        {{#eq ../name 'otherCalendars'}}
            <span name='removeOtherCalendar' tabindex='-1'>
                <i class='sicon sicon-close sicon-close-hover'></i>
            </span>
        {{/eq}}
    </li>
{{/each}}
