{{#if model.attributes.invitees.isLoading}}
    {{str "LBL_LOADING" module}}
{{else}}
    <div class="participants">
        {{#each value}}
            <div class="row">
                <div class="participant">
                    <div class="cell avatar">
                        <span class="label label-module label-{{module}} pull-left">{{moduleIconLabel module}}</span>
                    </div>
                    <div class="cell name">
                        {{#if isNameErased}}
                            {{partial 'erased' ../../this this fallbackTemplate='erased'}}
                        {{else}}
                            <span class="ellipsis_inline" title="{{name}}">{{name}}</span>
                        {{/if}}
                    </div>
                    <div class="cell status">
                        <div class="label{{#if accept_status.css_class}} label-{{accept_status.css_class}}{{/if}}">
                            {{str accept_status.label ../module}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row spacer">
                <div class="cell"></div>
            </div>
        {{/each}}
    </div>
    <button class="btn btn-link btn-invisible more" data-action="show-more">{{showMoreTemplate}}</button>
{{/if}}
