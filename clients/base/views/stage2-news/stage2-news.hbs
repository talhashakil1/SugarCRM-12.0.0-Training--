{{#unless stage2errorCode}}
<div class='stage2-news'>
    {{#if isHintRequestLoading}}
        {{#if isDarkMode}}
                <img rel="noopener" src='themes/Stage2/hint_news_dashlet_preloader.gif'>
        {{else}}
                <img rel="noopener" src='themes/Stage2/opt_render_3.gif'>
        {{/if}}
    {{else}}
        <div id='newsarea' style='height: 247px'>
            {{#if displayNews}}
                <ul class='unstyled stage2-news-list'>
                    {{#each news}}
                        {{#unless hide}}
                            <li class='item'>
                                <div class='details'>
                                    <span class='publisher'>
                                        {{#if photo_url}}
                                            <img rel="noopener" src='{{photo_url}}' name='photo_url'>
                                        {{else}}
                                            <span class='{{publisher}}' name='publisher'>{{publisher}}</span>
                                        {{/if}}
                                    </span>
                                    <span class='news_date' name='date' title='{{date}}'>
                                        {{relativeTime date class='date'}}
                                    </span>
                                </div>
                                <span class='title'>
                                    <a target='_blank' href='{{hint_safeUrl source_url}}' data-action='newsClick'>
                                        <div>{{title}}</div>
                                    </a>
                                </span>
                            </li>
                        {{/unless}}
                    {{/each}}
                </ul>
            {{else}}
                <div class='empty_news'>{{str 'LBL_HINT_NEWS_NONE'}}</div>
            {{/if}}
        </div>
    {{/if}}
</div>
{{/unless}}
