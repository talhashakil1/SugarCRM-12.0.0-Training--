<div class="dashboard quotes-create">
    <div class="cols row-fluid">
        <ul class="dashlets row-fluid">
            <li class="span-12">
                <ul class="dashlet-row">
                    <li class="row-fluid">
                        <div class="rows well well-invisible">
                            <ul class="dashlet-cell rows row-fluid">
                                <li
                                    class="dashlet-container rounded-md h-full mx-2 my-2 p-0 shadow hover:shadow-lg transition-shadow bg-dashlet-background hover:bg-dashlet-background-hover"
                                >
                                    <div
                                        class="thumbnail dashlet h-full flex flex-column relative p-0 mb-0 border-none"
                                        data-type="dashlet"
                                    >
                                        <div data-dashlet="toolbar">
                                            <div class="dashlet-header">
                                                <h4 data-toggle="dashlet" class="dashlet-title text-initial m-0">
                                                    {{str 'LBL_PRODUCT_QUICK_PICKS_DASHLET_NAME' }}
                                                </h4>
                                            </div>
                                        </div>
                                        <div data-dashlet="dashlet" class="dashlet-content">
                                            <div class="dashlet-unordered-list recent-used-product">
                                                <div class="dashlet-tabs tab{{tabs.length}}">
                                                    {{{tabsHtml}}}
                                                </div>
                                                <div class="tab-content">
                                                    {{{recordsHtml}}}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
</div>
