<div class="headerpane">
    <h1>
        <div class="record-cell">
            <span class="module-title">{{str 'LBL_MAPS_MANUAL_GEOCODING'}}</span>
        </div>
        <div class="btn-toolbar pull-right dropdown">
            {{#each meta.buttons}}
                {{field ../this}}
            {{/each}}
        </div>
    </h1>
</div>
<div class="main-pane row-fluid">
    <div class="span3 map-floating-panel">
        <div class="record">
            <div class="row-fluid panel_body">
                <div class="span12 record-cell">
                    <div class="ellipsis_inline">
                        <span class="text-overflow">{{str "LBL_MAP_SEARCH_BY_ADDRESS"}}</span>
                    </div>
                    <span>
                        <a class="inherit-width" data-action="search-by-address" data-placeholder="{{str 'LBL_MAP_SEARCH_BY_ADDRESS'}}"></a>
                    </span>
                </div>
            </div>
            <div class="row-fluid panel_body">
                <div class="span12 record-cell">
                    <div class="ellipsis_inline">
                        <h4 class="dashlet-title">{{str "LBL_MAP_POINT_COORDINATES"}}</h4>
                    </div>
                </div>
            </div>
            <div class="row-fluid panel_body">
                <div class="span6 record-cell">
                    <div class="ellipsis_inline">
                        <span class="text-overflow">{{str "LBL_MAP_LATITUDE"}}</span>
                    </div>
                    <span>
                        <input type="text" class="inherit-width" data-fieldname="latitude" readonly="1" maxlength="255">
                    </span>
                </div>
                <div class="span6 record-cell">
                    <div class="ellipsis_inline">
                        <span class="text-overflow">{{str "LBL_MAP_LONGITUDE"}}</span>
                    </div>
                    <span>
                        <input type="text" class="inherit-width" data-fieldname="longitude" readonly="1" maxlength="255">
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="map-holder-drawer" data-container="main-map-container">
        <div class="map-loading-screen-overlay" data-widget="manual-geocode-loading">
            <i class="sicon sicon-refresh sicon-is-spinning map-loading-icon"></i>
            <h4 class="map-loading-label">{{str "LBL_LOADING"}}</h4>
        </div>
    </div>
</div>
