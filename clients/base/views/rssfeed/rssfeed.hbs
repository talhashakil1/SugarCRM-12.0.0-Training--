{{#if feed}}
    <div class="rss-feed">
        <h4>
            {{#if feed.isClickable}}<a href="{{feed.link}}">{{/if}}
            {{feed.title}}
            {{#if feed.isClickable}}</a>{{/if}}
        </h4>
        <ul>
            {{#each feed.entries}}
                <li class="news-article">
                    {{#if isClickable}}
                        <a href="{{link}}">{{title}}</a>
                    {{else}}
                        <span>{{link}}</span>
                    {{/if}}
                    {{#if author}} - {{str "LBL_RSS_FEED_AUTHOR"}} {{author}}{{/if}}
                </li>
            {{/each}}
        </ul>
    </div>
{{else}}
    <div class="block-footer">
        {{#if errorThrown}}
            {{str "LBL_NO_DATA_AVAILABLE"}}
        {{else}}
            {{loading 'LBL_ALERT_TITLE_LOADING'}}
        {{/if}}
    </div>
{{/if}}
