<div class='dfab {{pinnedTo}}'>
    <div class='dfab-title'>
        <div>
            <div>
                {{#if meta.label}}
                    <div class='dfab-label'>{{str meta.label}}</div>
                {{/if}}
                {{#if meta.icon}}
                    <div class='dfab-icon sicon sicon-lg {{meta.icon}}'></div>
                {{/if}}
            </div>
        </div>
    </div>
    <div class='dfab-content'>
        <div class='dfab-pin'>
            <div>
                <div class='dfab-label'>
                    <span class='txt-top'>{{str 'LBL_PIN_TO_TOP'}}</span>
                    <span class='txt-bottom'>{{str 'LBL_PIN_TO_BOTTOM'}}</span>
                </div>
                <div class='dfab-icon sicon sicon-lg sicon-pin-lg'></div>
            </div>
        </div>
        {{#each meta.buttons}}
            {{field ../this model=../this.model template='dfab-button'}}
        {{/each}}
    </div>
</div>
