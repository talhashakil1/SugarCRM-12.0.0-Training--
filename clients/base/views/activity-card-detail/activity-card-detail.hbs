<div class="record-icon" rel="tooltip" title={{moduleIconToolTip this.activity.attributes.icon_module}}>
    <i class="{{buildIcon this.activity.attributes.icon_class}}"></i>
</div>
{{#each meta.panels}}
    <div class="{{css_class}}">
        {{#each fields}}
            {{field ../../this model=../../activity template="preview"}}
        {{/each}}
    </div>
{{/each}}
<div class="record-details" rel="tooltip" data-placement="bottom" title="{{str detailDateTimeTooltip activity.module}}">
    <div class="record-date-details">
        <div class="date-day">
            {{detailDay}}
        </div>
        <div class="date-date-time">
            {{detailDateTime}}
        </div>
    </div>
</div>
