<h1 class='ellipsis_inline' rel='tooltip' data-placement='bottom' data-original-title="{{str 'LBL_HINT_PANEL'}}">
    {{str 'LBL_HINT_PANEL'}}
</h1>

<div class='btn-toolbar pull-right'>
    {{#if layout.previewEdit}}
    {{!-- We need both save and cancel buttons to exist in the DOM as core "preview edit" logic depends on that --}}
    <div class="preview-headerpane" align="right" style="display: none">
        {{#each meta.buttons}}
            {{field ../this}}
        {{/each}}
    </div>
    {{/if}}
    <div class='btn-group'>
        {{#unless layout.hideNextPrevious}}
        <button type='button' data-direction='left'
            aria-label="{{str 'LBL_PREVIEW_PREVIOUS'}}"
            {{#unless layout.previous}} tabindex='-1'{{/unless}}
            class='btn btn-invisible btn-left{{#unless layout.previous}} disabled{{/unless}}'>
            <i class='sicon sicon-chevron-left'></i>
        </button>
        <button type='button' data-direction='right'
            aria-label="{{str 'LBL_PREVIEW_NEXT'}}"
            {{#unless layout.next}} tabindex='-1'{{/unless}}
            class='btn btn-invisible btn-right{{#unless layout.next}} disabled{{/unless}}'>
            <i class='sicon sicon-chevron-right'></i>
        </button>
        {{/unless}}
    </div>
    <div class='btn-group'>
        <button type='button' class='btn btn-invisible closeSubdetail'
            data-action='close' data-toggle='tab' aria-label="{{str 'LBL_PREVIEW_CLOSE'}}">
            <i class='sicon sicon-close'></i>
        </button>
    </div>
</div>
