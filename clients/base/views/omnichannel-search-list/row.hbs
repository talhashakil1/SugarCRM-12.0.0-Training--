<div class="primary">
    {{#each model.primaryFields}}
        {{#notEq type 'avatar'}}<h3>{{/notEq}}
        {{#if highlighted}}
            <span>{{value}}</span>
        {{else}}
            {{field ../../view model=../../model template='omni-search'}}
        {{/if}}
        {{#notEq type 'avatar'}}</h3>{{/notEq}}
    {{/each}}
</div>
<div class="secondary">
    {{#each model.secondaryFields}}
        {{~#if highlighted~}}
        <span>{{str ../label ../../module}}:</span> <span>{{../value}}</span>{{#unless @last}}, {{/unless}}
        {{~^~}}
        <span>{{str ../label ../../module}}: </span>{{field ../../view model=../../model template='list'}}{{#unless @last}}, {{/unless}}
        {{~/if~}}
    {{/each}}
</div>

