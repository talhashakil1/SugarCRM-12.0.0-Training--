<div class="headerpane">
    <h1>
        <div class="record-cell">
            <span class="module-title">
                {{#if _showDirections}}
                    {{str 'LBL_MAP_DIRECTIONS'}}
                {{else}}
                    {{str 'LBL_MAP_MAP'}}
                {{/if}}
            </span>
        </div>
        <div class="btn-toolbar pull-right">
            <span class="create">
                <a class="btn btn-primary" data-action="close">{{str "LBL_CLOSE_BUTTON_LABEL"}}</a>
            </span>
        </div>
    </h1>
</div>
<div class="main-pane row-fluid">
    <div class="map-holder-drawer" data-container="main-map-container">
        <div class="map-loading-screen-overlay" data-widget="list-map-loading">
            <i class="sicon sicon-refresh sicon-is-spinning map-loading-icon"></i>
            <h4 class="map-loading-label">{{str "LBL_LOADING"}}</h4>
        </div>
    </div>
</div>
