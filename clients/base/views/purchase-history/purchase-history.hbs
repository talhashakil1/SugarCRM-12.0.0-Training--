{{#if purchasesModule}}
    <div class="purchase-history">
        {{#if collection.dataFetched}}
            <div class="purchase-history-body">
                <ul class="unstyled listed" data-action="pagination-body">
                    {{#each collection.models}}
                        {{partial 'row' ../this rowModel=this}}
                    {{/each}}
                </ul>
            </div>
            {{#unless collection.length}}
                <div class="block-footer">{{str "LBL_NO_PURCHASE_HISTORY"}}</div>
            {{/unless}}
        {{else}}
            <div class="block-footer">
                {{str "LBL_LOADING" module}}
            </div>
        {{/if}}
    </div>
{{else}}
    <div class="block-footer">
        {{str "LBL_REQUIRE_PURCHASES_AND_PLIS"}}
    </div>
{{/if}}
