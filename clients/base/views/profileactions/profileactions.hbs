<ul class="nav megamenu" id="userList">
    <li class="dropdown" id="userActions" data-menu="user-actions">
        <div class="btn-group p-2">
            <button data-toggle="dropdown" class="btn btn-invisible btn-link dropdown-toggle" rel="tooltip" data-placement="bottom" title="{{userName}}" track="click:userActions" aria-label="{{str 'LBL_USER_MENU'}}" role="button" aria-haspop="true" aria-expanded="false">
                {{#if pictureUrl}}
                    <img src="{{pictureUrl}}" alt="{{userName}}" class="avatar avatar-btn">
                {{else}}
                    <i class="sicon sicon-lg sicon-user"></i>
                {{/if}}
                <i class="sicon sicon-chevron-down"></i>
            </button>
            <div class="dropdown-menu rounded-t-none scroll pull-right">
                <ul role="menu">
                    {{#each menulist}}
                        {{#if css_class}}
                            <li class="{{css_class}} megamenu-dropdown-item-container" role="menuitem">
                        {{else}}
                            <li class="megamenu-dropdown-container" role="menuitem">
                        {{/if}}
                            <a href="{{route}}" class="megamenu-dropdown-item" {{#if openwindow}}target="_blank"{{/if}} track="click:userAction-{{label}}" tabindex="-1">
                                {{#if img_url}}
                                    <span>
                                        <img src="{{img_url}}" alt="{{../../userName}}" class="avatar avatar-mini">
                                    </span>
                                {{else}}
                                    {{#if icon}}
                                        <i class="{{buildIcon icon}}"></i>
                                    {{/if}}
                                {{/if}}
                                {{str label}}
                            </a>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </li>
</ul>
