{{#if view.hasAvatarUser}}
    <div class="header-user">
        <div class="avatar">
            <i class="sicon sicon-user"></i>
        </div>
        <span class="user-value">
            {{#if userField}}
                {{#with ../userField}}
                    {{field ../../view model=../../model template="preview"}}
                {{/with}}
            {{else}}
                {{#if userValue}}
                    {{userValue}}
                {{/if}}
            {{/if}}
        </span>
    </div>
{{/if}}
