<div>
    <div class="record">
        {{#each meta.panels}}
            {{#unless header}}
                {{#each ../grid}}
                    <div class="row-fluid {{../name}}{{#if ../hide}} hide{{/if}}">
                        {{#each this}}
                            <div
                                class="span{{span}} record-cell{{#if cell_css_class}} {{cell_css_class}}{{/if}}"
                                data-type="{{type}}" data-name="{{name}}"
                            >
                                {{#if ../../labels}}
                                    {{#unless dismiss_label}}
                                        <div class="record-label" data-name="{{name}}">
                                            {{#if label}}{{str label ../../../../../../module}}{{/if}}
                                        </div>
                                    {{/unless}}
                                {{/if}}
                                {{#if name}}
                                    <span
                                        class="normal{{#if css}} {{css}}{{/if}} index{{index}}"{{#if name}}
                                        data-fieldname="{{name}}"{{/if}} data-index="{{index}}"
                                    >
                                        {{field ../../../../../this model=../../../../../settings template='edit'}}
                                    </span>
                                {{/if}}
                            </div>
                        {{/each}}
                    </div>
                {{/each}}
            {{else}}
                <!-- HEADER -->
                <div
                    class="ellipsis_inline {{#if css_class}}{{css_class}}{{/if}}"
                    data-placement="bottom"{{#if dir}}
                    dir="{{dir}}"{{/if}} title="{{str label}}"
                >
                    {{str label}}
                </div>
            {{/unless}}
        {{/each}}
    </div>
</div>
