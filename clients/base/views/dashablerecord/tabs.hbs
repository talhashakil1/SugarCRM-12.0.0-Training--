{{#if showTabs}}
<div class="dashlet-tabs-row">
    {{#each this.tabs}}
        {{#if this}}
            <div class="dashlet-tab{{#eq ../../settings.attributes.activeTabIndex @index}} active{{/eq}}">
            <a data-toggle="tab" data-action="tab-switcher" data-index="{{@index}}" data-module-name="{{getModuleName ../module plural=true}}">
                <span class="tab-title font-semibold">
                    {{#if label}}
                        {{str label module}}
                    {{else}}
                        {{#eq collection.length "1"}}
                            {{#if labels.singular}}{{str labels.singular module}}{{else}}{{getModuleName module}}{{/if}}
                        {{else}}
                            {{#if labels.plural}}{{str labels.plural module}}{{else}}{{getModuleName module plural=true}}{{/if}}
                        {{/eq}}
                    {{/if}}
                </span>
            </a>
        </div>
        {{/if}}
    {{/each}}
</div>
{{/if}}
