{{> consent-wizard-page.header }}
<div class="record">
    <span>{{{str "LBL_USER_COOKIE_CONSENT_TEXT" null this}}}</span>
</div>
<!-- Hack: Adding .record here since .record .record-cell contain styles we need :( -->
<div class="modal-body record small-modal">
    {{#each meta.panels}}
        {{#each grid}}
            <div class="row-fluid {{../name}}{{#if ../hide}} hide{{/if}}">
                {{#each this}}
                    <label class="span{{span}} consent-cookie{{#if cell_css_class}} {{cell_css_class}}{{/if}}" data-type="{{type}}" data-name="{{name}}">
                        {{field ../../../this model=../../../model template="edit"}}
                        <span>{{#if label}}{{str label module}}{{/if}}</span>
                    </label>
                {{/each}}
            </div>
        {{/each}}
    {{/each}}
</div>
{{> wizard-page.footer }}
