<div class="dashboard quotes-create">
    <div class="cols row-fluid">
        <ul class="dashlets row-fluid">
            <li class="span-12">
                <ul class="dashlet-row">
                    <li class="row-fluid">
                        <div class="rows well well-invisible">
                            <ul class="dashlet-cell rows row-fluid">
                                <li class="dashlet-container h-full rounded-md mx-2 my-2 p-0 shadow hover:shadow-lg transition-shadow bg-dashlet-background hover:bg-dashlet-background-hover">
                                    <div
                                        class="thumbnail dashlet flex flex-column h-full relative p-0 mb-0 border-none"
                                        data-type="dashlet"
                                    >
                                        <div data-dashlet="toolbar">
                                            <div class="dashlet-header">
                                                <div class="btn-toolbar pull-right">
                                                    <div class="loading-icon">
                                                        <i data-action="loading" class="sicon sicon-refresh sicon-is-spinning"></i>
                                                    </div>
                                                </div>
                                                <h4 data-toggle="dashlet" class="dashlet-title text-initial m-0">
                                                    {{str 'LBL_PRODUCT_CATALOG_NAME' }}
                                                </h4>
                                            </div>
                                        </div>
                                        <div data-dashlet="dashlet" class="dashlet-content flex-grow">
                                            <div class="product-catalog-view product-catalog-dashlet product-catalog-dashlet-{{this.cid}}">
                                                <div class="product-catalog-search pt-2.5 px-2 pb-3.5">
                                                    <input type="text" name="product-catalog-search-term"
                                                           class="product-catalog-search-term hidden"
                                                           placeholder="{{searchText}}"/>
                                                </div>
                                                <div class="product-catalog-no-results hidden">
                                                    {{str 'LBL_NO_PRODUCT_CATALOG_RESULTS' 'ProductTemplates'}}
                                                </div>
                                                <div class="product-catalog-container product-catalog-container-{{this.cid}} pl-3.5">
                                                    <div id="product-catalog-canvas-{{this.cid}}"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
</div>
