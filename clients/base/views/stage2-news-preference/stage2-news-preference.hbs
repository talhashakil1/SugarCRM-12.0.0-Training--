<div class='stage2-preference-responsive-ct'>
    <div class='stage2-preference-responsive'>
        {{#with meta.label_type}}
            <div class='{{cls}}'>{{field ../this}}</div>
        {{/with}}

        {{#with meta.input_type}}
            <div data-fieldname='{{name}}' class='{{cls}}{{../categoryClass}}'>
                {{field ../this model=../model template='edit'}}
            </div>
        {{/with}}

        {{#with meta.label_tag}}
            <div class="{{cls}}{{#notEq ../model.attributes.type 'tags'}} hide{{/notEq}}">
                {{field ../this}}
            </div>
        {{/with}}

        {{#with meta.input_tag}}
            <div data-fieldname='{{name}}'
            class="{{cls}}{{#notEq ../model.attributes.type 'tags'}} hide{{/notEq}}">
                {{field ../this model=../model template='edit'}}
            </div>
        {{/with}}
    </div>

    <div class='stage2-preference-responsive'>
        {{#with meta.label_category}}
            <div class='{{cls}}'>{{field ../this}}</div>
        {{/with}}

        {{#with meta.input_category}}
            <div data-fieldname='{{name}}' class='{{cls}}'>
                {{field ../this model=../model template='edit'}}
            </div>
        {{/with}}
    </div>

    <div class='stage2-preference-responsive'>
        {{#with meta.label_target}}
            <div class='{{cls}}'>{{field ../this}}</div>
        {{/with}}

        {{#with meta.input_sugar}}
            <div data-fieldname='{{name}}' class='{{cls}}'>
                {{field ../this model=../model template='edit'}}
            </div>
        {{/with}}

        {{#if supportsPushMessages}}
            {{#with meta.input_browser}}
                <div data-fieldname='{{name}}' class='{{cls}}'>
                    {{field ../../this model=../../model template='edit'}}
                </div>
            {{/with}}
        {{else}}
            {{#with meta.input_browser_disabled}}
                <div data-fieldname='{{name}}' class='{{cls}}'>
                    {{field ../../this model=../../model template='disabled'}}
                </div>
            {{/with}}
        {{/if}}

        {{#with meta.input_immediate}}
            <div data-fieldname='{{name}}' class='{{cls}}'>
                {{field ../this model=../model template='edit'}}
            </div>
        {{/with}}

        {{#with meta.input_daily}}
            <div data-fieldname='{{name}}' class='{{cls}}'>
                {{field ../this model=../model template='edit'}}
            </div>
        {{/with}}

        {{#with meta.input_weekly}}
            <div data-fieldname='{{name}}' class='{{cls}}'>
                {{field ../this model=../model template='edit'}}
            </div>
        {{/with}}
    </div>
</div>

<button type='button' rel='tooltip' data-placement='left'
    title="{{str 'LBL_HINT_MINIMUM_PREFERENCES'}}"
    class='stage2-notification-pref-removebtn fake hide'>
    <i class='sicon sicon-minus'></i>
</button>

<button type='button' data-pref-cid='{{model.cid}}' data-action='removePreference'
    class='stage2-notification-pref-removebtn real'>
    <i class='sicon sicon-minus'></i>
</button>
