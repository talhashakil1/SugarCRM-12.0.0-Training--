<div class='hint-config hint-preview' style='{{#if isDarkMode}}background-color: #16191D;{{/if}}'>
    <ul class='nav nav-tabs hint-config-tabs' style='{{#if isDarkMode}}background-color: #000000;{{/if}}'>
        {{#if shouldShowAccountsTab}}
            <li {{#eq currentModule "Accounts"}}class="active"{{/eq}}><a href="#accounts" data-toggle="tab">{{str 'LBL_HINT_CONFIG_TAB_ACCOUNTS'}}</a></li>
        {{/if}}
        {{#if shouldShowContactsTab}}
            <li {{#eq currentModule "Contacts"}}class="active"{{/eq}}><a href="#contacts" data-toggle="tab">{{str 'LBL_HINT_CONFIG_TAB_CONTACTS'}}</a></li>
        {{/if}}
        {{#if shouldShowLeadsTab}}
            <li {{#eq currentModule "Leads"}}class="active"{{/eq}} ><a href="#leads" data-toggle="tab">{{str 'LBL_HINT_CONFIG_TAB_LEADS'}}</a></li>
        {{/if}}
    </ul>

    <div class='hint-config-row-fake'>
        <h2 class='hint-config-header' style='{{#if isDarkMode}}color: #FFFFFF;{{/if}}'>{{str 'LBL_HINT_CONFIG_BASIC_PREVIEW'}}</h2>
        <div class='hint-config-container{{#notEq this.module currentModule}} hide {{/notEq}}' style='{{#if isDarkMode}}border-color: #4D5154;{{/if}}' id='accounts-basic-panel'>
            <div class='panel' style='{{#if isDarkMode}}background-color: #000000;{{/if}}'>
                <div class='row-fluid-no-drag'>
                    <div class='hint-preview-field-value span4 record-cell record-cell--hint_account_logo'
                         data-type='stage2_image' name='hint_account_logo' data-name='hint_account_logo'>
                        <span class='detail' style='{{#if isDarkMode}}color: #FFFFFF;{{/if}}'>
                        <div class='image_field image_detail' style='height: 0px;'>
                            <div class='image_preview'>
                                <img src='themes/Stage2/account_default.png'>
                            </div>
                        </div>
                        </span>
                    </div>
                </div>

                <div class='row-fluid'>
                    <div class='hint-preview-field-value span8 record-cell record-cell--name'
                         data-type='text' name='name' data-name='name'>
                        <button class='hint-preview-icon--locked pull-right' data-action='lock' data-name='name'></button>
                        <span class='detail' style='{{#if isDarkMode}}background-color: #000000;{{/if}}'>
                            <div class='ellipsis_inline' style='{{#if isDarkMode}}color: #E5EAED;{{/if}}' data-placement='bottom' title='SugarCRM'>{{str 'LBL_LIST_ACCOUNT_NAME'}}
                            </div>
                        </span>
                    </div>
                </div>

                <div class='row-fluid'>
                    <div class='hint-preview-field-value span8 record-cell record-cell--website'
                         data-type='stage2_url' name='website' data-name='website'>
                        <button class='hint-preview-icon--locked pull-right' data-action='lock' data-name='website'></button>
                        <span class='detail' style='{{#if isDarkMode}}color: #79ADE0;{{/if}}'>
                            <span class='ellipsis_inline'>{{str 'LBL_HINT_COMPANY_WEBSITE'}}</span>
                        </span>
                    </div>
                </div>
            </div>

            <div class='panel configurable' style='{{#if isDarkMode}}background-color: #000000; border-top-color: #4D5154;{{/if}}'>
                {{#each this.modulesMetaData}}
                    {{#eq this.module 'accounts'}}
                        {{#each this.basicFields}}
                            <div class='row-fluid' data-name="{{this.name}}">
                                <div class='hint-preview-field-label span4 ellipsis_inline record-label--{{this.name}}'
                                     data-name='{{this.name}}' data-original-title='' title=''>
                                    {{this.label}}
                                </div>
                                <div class='hint-preview-field-value span8 record-cell record-cell--{{this.name}}'
                                     data-type='' name='{{this.name}}' style='{{#if ../../../isDarkMode}}color: #E5EAED;{{/if}}' data-name='{{this.name}}'>
                                    <span class='detail'>
                                        <div class='ellipsis_inline' data-placement='bottom' title='' data-original-title="{{this.label}}">
                                            {{this.value}}
                                        </div>
                                    </span>
                                </div>
                            </div>
                        {{/each}}
                    {{/eq}}
                {{/each}}
            </div>
        </div>

        {{#each this.modulesMetaData}}
            {{#notEq this.module 'accounts'}}
                <div class='hint-config-container' style='{{#if ../../isDarkMode}}border-color: #4D5154;{{/if}}' id='{{this.module}}-basic-panel'>
                    <div>
                        <div class='header hint-preview-contact' style='{{#if ../../isDarkMode}}background-color: #2B2D2E;{{/if}}'>
                            <div class='hint-preview-field-value record-cell record-cell--hint_photo'
                                 data-name='hint_photo' data-type='stage2_image'  name='hint_photo'>
                                <span class='detail'>
                                    <span class='label label-module label-module-lg label-Contacts' rel='tooltip' title='' data-placement='right' data-original-title='Contact'>
                                    </span>
                                </span>
                            </div>
                            <div class='hint-preview-field-value record-cell record-cell--full_name'
                                 data-name='full_name' data-type='fullname' name='full_name'>
                                <span class='fieldset detail'>
                                    <span class='ellipsis_inline' title='' style='{{#if ../../isDarkMode}}color: #79ADE0;{{/if}}' data-placement='bottom' data-fieldname='full_name' data-original-title='{{this.value}}'>
                                        {{str 'LBL_HINT_FULL_NAME'}}
                                    </span>
                                </span>
                                <button class='hint-preview-icon--locked' data-action='lock' data-name=''></button>
                            </div>
                            <div class='hint-preview-field-value record-cell record-cell--title'
                                 data-type='text' name='title' data-name='title'>
                                <span class='fieldset detail'>
                                    <span class='ellipsis_inline' data-placement='bottom' title='' style='{{#if ../../isDarkMode}}color: #E5EAED;{{/if}}' data-original-title='{{this.value}}'>
                                        {{str 'LBL_HINT_JOB_TITLE'}}
                                    </span>
                                </span>
                                <button class='hint-preview-icon--locked hidden' data-action='lock'></button>
                            </div>
                        </div>
                        <div class='panel configurable' style='{{#if ../../isDarkMode}}background-color: #000000; border-color: #4D5154;{{/if}}'>
                            {{#each this.basicFields}}
                                <div class='row-fluid' data-name='{{this.name}}'>
                                    <div class='hint-preview-field-label span4 ellipsis_inline record-label--{{this.name}}'
                                         data-name='{{this.name}}' data-original-title='' title=''>
                                        {{this.label}}
                                    </div>
                                    <div class='hint-preview-field-value span8 record-cell record-cell--{{this.name}}'
                                         name='{{this.name}}' data-name='{{this.name}}' style='{{#if ../../../isDarkMode}}color: #E5EAED;{{/if}}'>
                                        <span class='detail'>
                                            <div class='ellipsis_inline' data-placement='bottom' title='' data-original-title='{{this.label}}'>
                                                {{this.value}}
                                            </div>
                                        </span>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            {{/notEq}}
        {{/each}}
    </div>

    <div class='hint-config-row-fake'>
        <h2 class='hint-config-header' style='{{#if isDarkMode}}color: #FFFFFF;{{/if}}'>{{str 'LBL_HINT_CONFIG_EXPANDED_PREVIEW'}}</h2>
        <div class='hint-config-container' style='{{#if isDarkMode}}border-color: #4D5154;{{/if}}' id='accounts-expanded-panel'>
            <div class='panel configurable' style='{{#if isDarkMode}}background-color: #000000;{{/if}}'>
                {{#each this.modulesMetaData}}
                    {{#eq this.module 'accounts'}}
                        {{#each this.expandedFields}}
                            <div class='row-fluid' data-name='{{this.name}}'>
                                <div class='hint-preview-field-label span4 ellipsis_inline record-label--{{this.name}}'
                                     data-name='{{this.name}}' data-original-title='' title=''>
                                    {{this.label}}
                                </div>
                                <div class='hint-preview-field-value span8 record-cell record-cell--{{this.name}}'
                                     name='{{this.name}}' style='{{#if ../../../isDarkMode}}color: #E5EAED;{{/if}}' data-name='{{this.name}}'>
                                    <span class='detail'>
                                        <div class='ellipsis_inline' data-placement='bottom' title='' data-original-title='{{this.label}}'>
                                            {{this.value}}
                                        </div>
                                    </span>
                                </div>
                            </div>
                        {{/each}}
                    {{/eq}}
                {{/each}}
            </div>
        </div>

        {{#each this.modulesMetaData}}
            {{#notEq this.module 'accounts'}}
                <div class='hint-config-container' style='{{#if ../../isDarkMode}}background-color: #000000; border-color: #4D5154;{{/if}}' id='{{this.module}}-expanded-panel'>
                    <div>
                        <div class='panel configurable' style='{{#if ../../isDarkMode}}background-color: #000000;{{/if}}'>
                            {{#each this.expandedFields}}
                                <div class='row-fluid' data-name='{{this.name}}' >
                                    <div class='hint-preview-field-label span4 ellipsis_inline record-label--{{this.name}}'
                                         data-name='{{this.name}}' data-original-title='' title=''>
                                        {{this.label}}
                                    </div>
                                    <div class='hint-preview-field-value span8 record-cell record-cell--{{this.name}}'
                                         data-type='' style='{{#if ../../../isDarkMode}}color: #E5EAED;{{/if}}' name='{{this.name}}' data-name='{{this.name}}'>
                                        <span class='detail'>
                                            <div class='ellipsis_inline' data-placement='bottom' title='' data-original-title='{{this.label}}'>
                                                {{this.value}}
                                            </div>
                                        </span>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            {{/notEq}}
        {{/each}}
    </div>

    <div class='hint-config-row-fake'>
        <div class="hint-config-container-directions" style='{{#if isDarkMode}}background-color: #2B2D2E;{{/if}}'>
            <ul>
                <li class="hint-config-directions" style='{{#if isDarkMode}}color: #C0EDFF;{{/if}}'>{{str 'LBL_HINT_CONFIG_DIR_PAR1'}}</li>
                <li class="hint-config-directions" style='{{#if isDarkMode}}color: #C0EDFF;{{/if}}'>{{str 'LBL_HINT_CONFIG_DIR_PAR2'}}
                    <strong><a style='{{#if isDarkMode}}color: #C0EDFF;{{else}}color: #00636E;{{/if}}' target="_blank" href={{documentationLink}}>{{str 'LBL_HINT_CONFIG_NAME'}}</a></strong>
                </li>
                <li class="hint-config-directions" style='{{#if isDarkMode}}color: #C0EDFF;{{/if}}'>
                    <strong><a class='restoreDefaults' style='{{#if isDarkMode}}color: #C0EDFF;{{/if}}' href='#'>{{str 'LBL_HINT_CONFIG_RESTORE_BUTTON'}}</a></strong>
                    {{str 'LBL_HINT_CONFIG_RESTORE_TEXT'}} {{currentModule}} {{str 'LBL_HINT_CONFIG_MODULE_TEXT'}}
                </li>
            </ul>
        </div>
    </div>
</div>
