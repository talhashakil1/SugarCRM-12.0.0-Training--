<div class="modal progress-modal rounded-md shadow-lg bg-alert-background modal-stack">
    <div class="modal-body my-12">
        <div class="row-fluid">
            <h3 data-holder="title" class="text-center text-2xl">{{str 'TPL_MASSUPDATE_TITLE' this.module this}}</h3>
            <div class="mx-auto w-9/12">
                <div class="progress-label text-center text-sm my-2">
                    <span data-holder="message"></span>
                    <span data-holder="estimate"></span>
                </div>
                <div class="progress progress-info progress-striped active" data-holder="bar">
                    <div class="bar" data-holder="progressbar"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        {{#each meta.buttons}}
            {{field ../this model=../model}}
        {{/each}}
    </div>
</div>
<div class="modal-backdrop"></div>
