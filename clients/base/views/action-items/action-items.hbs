<div class="action-items-inner">
    {{#each items}}
        <div class="action-item mt-2 mb-2">
            {{#if customIcon}}
                <img src="{{customIcon}}" border="0" align="absmiddle" alt="{{str label ../../module}}">
            {{else}}
                <i class="sicon {{icon}}"></i>
            {{/if}}
            <span class="action-item-label ml-3.5"
                {{#if tooltip}}
                  rel="tooltip"
                  data-placement="bottom"
                  title="{{str tooltip ../../module}}"
                {{/if}}
            >
                {{#if href}}
                    <a href="{{href}}">{{str label ../../module}}</a>
                {{/if}}
            </span>
        </div>
    {{/each}}
</div>
