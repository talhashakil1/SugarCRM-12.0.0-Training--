<div class="welcome">
    <div class="thumbnail login">
        <div class="tcenter">
            <h2 class="brand"><img src="{{logoUrl}}" alt="SugarCRM"></h2>
        </div>
        <br>
        <br>
        <form name='{{name}}' class="tcenter" autocomplete="off">
            {{#each meta.panels}}
                {{#each fields}}
                    <div class="control-group">{{field ../../this model=../../model}}</div>
                {{/each}}
            {{/each}}
            {{#each meta.buttons}}
                <div class="control-group">
                    {{field ../this model=../model}}
                </div>
            {{/each}}
            <br>
            <br>
            <div class="control-group">
            {{#if showPortalPasswordReset}}
                <a href="#forgotpassword" class="btn btn-link btn-invisible">{{str "LBL_PORTAL_FORGOT_PASSWORD"}}</a>
                <br>
            {{/if}}
            {{#if showPortalSignUp}}
                <a href="#signup" class="btn btn-link btn-invisible">{{str "LBL_SIGNUP_BUTTON_LABEL"}}</a>
            {{/if}}
            </div>
        </form>
    </div>
</div>
